@model IEnumerable<CarRental.Models.User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
}

<div class="container my-5">

    <!-- Page Title -->
    <h2 class="page-title mb-4 animate__animated animate__fadeInDown">
        <i class="bi bi-people-fill me-2"></i> Manage Users
    </h2>

    <!-- Glass Card -->
    <div class="card dashboard-card shadow-lg p-4 animate__animated animate__fadeInUp">

        <div class="table-responsive">
            <table class="table table-striped table-hover table-borderless mb-0 text-center custom-table">
                <thead class="table-header">
                    <tr>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Password</td>
                            <td>
                                @* <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-success btn-hover me-1"> *@
                                @*     <i class="bi bi-pencil-square"></i> Edit *@
                                @* </a> *@
                                <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-info btn-hover">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Page Title */
    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 1px 1px 5px rgba(0,0,0,0.5);
    }

    /* Glass Card */
    .dashboard-card {
        background: rgba(0, 0, 0, 0.6);
        border-radius: 1rem;
        border: 1px solid rgba(255,255,255,0.15);
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.4);
        }

    /* Table Header */
    .table-header {
        background-color: rgba(13, 110, 253, 0.8);
        color: #fff;
        font-weight: 600;
    }

    /* Table Body */
    .custom-table tbody tr {
        background-color: rgba(255,255,255,0.05);
        color: #fff; /* white text */
        transition: background-color 0.3s;
    }

        .custom-table tbody tr:hover {
            background-color: rgba(255,255,255,0.15);
        }

    table td, table th {
        vertical-align: middle;
        padding: 0.75rem 1rem;
        color: #fff; /* white text */
    }

        /* Text Selection */
        table::selection, table td::selection, table th::selection {
            background-color: #1E90FF; /* sea blue */
            color: #fff; /* keep text white */
        }

    /* Buttons */
    .btn-hover {
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.25);
        }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    /* Animate.css */
    .animate__fadeInUp, .animate__fadeInDown {
        animation-duration: 0.8s;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .btn-hover

    {
        width: 100%;
        margin-bottom: 0.5rem;
    }

    .table-responsive {
        overflow-x: auto;
    }

    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
