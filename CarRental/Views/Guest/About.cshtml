@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section d-flex align-items-center justify-content-center text-center" data-aos="fade-up" data-aos-duration="1200">
    <div class="hero-content">
        <h1 class="display-4 fw-bold mb-3" data-aos="zoom-in" data-aos-delay="300">About Phoenix</h1>
        <p class="lead mb-0" data-aos="fade-up" data-aos-delay="600">
            Discover who we are, what we do, and why millions trust Phoenix for car rentals.
        </p>
    </div>
</div>

<!-- About Content Section -->
<div class="about-content container my-5">
    <div class="row align-items-stretch gy-5">
        <!-- Image Column -->
        <div class="col-md-6 d-flex" data-aos="fade-right" data-aos-delay="200">
            <div class="glass-card flex-fill">
                <img src="/images/Extra/AboutPage3.jpg" class="img-fluid rounded shadow-lg" alt="About Phoenix">
            </div>
        </div>
        <!-- Text Column -->
        <div class="col-md-6 d-flex flex-column justify-content-center" data-aos="fade-left" data-aos-delay="400">
            <h2 class="fw-bold mb-3">Who We Are</h2>
            <p>
                Phoenix is a leading car rental service dedicated to providing fast, affordable, and reliable vehicles for all your journeys.
                With a diverse fleet of cars and a simple booking system, we make your travel seamless and enjoyable.
            </p>

            <h2 class="fw-bold mt-4 mb-3">Our Mission</h2>
            <p>
                Our mission is to make car rentals accessible to everyone, offering top-quality vehicles, 24/7 support, and a user-friendly platform
                that allows you to reserve your ride anytime, anywhere.
            </p>

            <h2 class="fw-bold mt-4 mb-3">Why Choose Phoenix?</h2>
            <ul class="list-unstyled why-choose">
                <li>🚗 Wide selection of vehicles including economy, luxury, SUVs, and vans</li>
                <li>⚡ Easy online booking in just a few clicks</li>
                <li>🕒 24/7 customer support for a worry-free experience</li>
                <li>💰 Transparent pricing with no hidden charges</li>
            </ul>
        </div>
    </div>
</div>

<!-- Call-to-Action Section -->
<div class="container my-5 text-center booking-section" data-aos="zoom-in-up" data-aos-duration="1000">
    <h2 class="fw-bold mb-3">Start Your Journey with Phoenix Today</h2>
    <p class="mb-4">Book your car easily and experience the best in convenience, reliability, and comfort.</p>
    <a href="@Url.Action("UserRegister", "Customer")" class="btn btn-lg btn-primary">Book a Car</a>
</div>

@section Styles {
    <style>
        /* Hero Section */
        .hero-section {
            position: relative;
            height: 60vh;
            min-height: 400px;
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/Extra/AboutPage1.jpg') center/cover no-repeat;
            color: #fff;
            border-radius: 20px;
            margin-bottom: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            overflow: hidden;
        }

            .hero-section h1,
            .hero-section p {
                z-index: 1;
                text-shadow: 0 0 15px rgba(0,0,0,0.7);
            }

        /* Glass card effect for image */
        .glass-card {
            background: rgba(255,255,255,0.08);
            backdrop-filter: blur(12px);
            border-radius: 1rem;
            border: 1px solid rgba(255,255,255,0.2);
            padding: 10px;
            width: 100%;
        }

        /* About Content Text */
        .about-content h2 {
            color: #002147;
        }

        .about-content p,
        .about-content ul.why-choose li {
            color: #000;
            font-size: 1rem;
            line-height: 1.6;
        }

        .about-content ul.why-choose li {
            margin-bottom: 10px;
        }

        /* Call-to-Action Section */
        .booking-section {
            background: linear-gradient(to right, #001f3f, #004080);
            color: #fff;
            padding: 60px 20px;
            border-radius: 20px;
        }

            .booking-section .btn-primary {
                font-weight: 600;
                padding: 12px 35px;
                border-radius: 30px;
                transition: all 0.3s ease;
            }

                .booking-section .btn-primary:hover {
                    background-color: #003366;
                    transform: translateY(-2px);
                    box-shadow: 0 8px 20px rgba(0,0,0,0.3);
                }

        /* Responsive */
        @@media (max-width: 768px) {
            .hero-section {
                height: 50vh;
            }

                .hero-section h1 {
                    font-size: 2rem;
                }

                .hero-section p {
                    font-size: 1rem;
                }

            .about-content h2 {
                font-size: 1.5rem;
            }

            .about-content p, .about-content ul.why-choose li {
                font-size: 0.95rem;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ once: true });
    </script>
}
