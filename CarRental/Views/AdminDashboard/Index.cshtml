@model CarRental.ViewModels.AdminDashboardViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4 animate-dashboard">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-speedometer2"></i> Admin Dashboard
        </h2>
        <span class="badge bg-secondary fs-6 shadow-sm">Welcome, Admin</span>
    </div>

    <!-- Statistic Cards -->
    <div class="row g-4">
        @* Total Cars *@
        <div class="col-md-3">
            <div class="card stat-card shadow-lg border-0 h-100 text-center rounded-4 bg-gradient-primary text-white">
                <div class="card-body">
                    <i class="bi bi-car-front-fill fs-1 mb-2 icon-hover"></i>
                    <h6 class="card-title text-uppercase fw-bold">Total Cars</h6>
                    <p class="fs-2 fw-bolder mb-0">@Model.TotalCars</p>
                </div>
            </div>
        </div>

        @* Available Cars *@
        <div class="col-md-3">
            <div class="card stat-card shadow-lg border-0 h-100 text-center rounded-4 bg-gradient-success text-white">
                <div class="card-body">
                    <i class="bi bi-check-circle-fill fs-1 mb-2 icon-hover"></i>
                    <h6 class="card-title text-uppercase fw-bold">Available Cars</h6>
                    <p class="fs-2 fw-bolder mb-0">@Model.AvailableCars</p>
                </div>
            </div>
        </div>

        @* Total Bookings *@
        <div class="col-md-3">
            <div class="card stat-card shadow-lg border-0 h-100 text-center rounded-4 bg-gradient-warning text-dark">
                <div class="card-body">
                    <i class="bi bi-calendar2-check-fill fs-1 mb-2 icon-hover"></i>
                    <h6 class="card-title text-uppercase fw-bold">Total Bookings</h6>
                    <p class="fs-2 fw-bolder mb-0">@Model.TotalBookings</p>
                </div>
            </div>
        </div>

        @* Total Customers *@
        <div class="col-md-3">
            <div class="card stat-card shadow-lg border-0 h-100 text-center rounded-4 bg-gradient-danger text-white">
                <div class="card-body">
                    <i class="bi bi-people-fill fs-1 mb-2 icon-hover"></i>
                    <h6 class="card-title text-uppercase fw-bold">Total Customers</h6>
                    <p class="fs-2 fw-bolder mb-0">@Model.TotalCustomers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="card shadow mt-5 border-0 animate-quicklinks">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-lightning-charge-fill"></i> Quick Links</h5>
        </div>
        <div class="card-body d-flex flex-wrap justify-content-center">
            <a asp-controller="AdminCar" asp-action="Index" class="btn btn-outline-primary m-2 px-4 btn-hover">
                <i class="bi bi-car-front"></i> Manage Cars
            </a>
            <a asp-controller="AdminBooking" asp-action="Create" class="btn btn-outline-warning m-2 px-4 btn-hover">
                <i class="bi bi-journal-check"></i> Manage Bookings
            </a>
            <a asp-controller="AdminCustomer" asp-action="CustomerList" class="btn btn-outline-success m-2 px-4 btn-hover">
                <i class="bi bi-person-badge"></i> Manage Customers
            </a>
            <a asp-controller="AdminUser" asp-action="Index" class="btn btn-outline-dark m-2 px-4 btn-hover">
                <i class="bi bi-shield-lock"></i> Manage Users
            </a>
        </div>
    </div>
</div>

<style>
    /* Fade-in animation */
    @@keyframes fadeSlideUp {
        0%

    {
        opacity: 0;
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .animate-dashboard {
        opacity: 0;
        animation: fadeSlideUp 0.8s forwards;
    }

    .animate-quicklinks {
        opacity: 0;
        animation: fadeSlideUp 1s 0.3s forwards;
    }

    /* Stat Cards */
    .stat-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 8px 25px rgba(0,0,0,0.25);
        }

    .icon-hover {
        transition: transform 0.3s ease, color 0.3s ease;
    }

    .stat-card:hover .icon-hover {
        transform: scale(1.3);
    }

    /* Gradients */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd, #6ba8ff);
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, #198754, #6be78a);
    }

    .bg-gradient-warning {
        background: linear-gradient(135deg, #ffc107, #ffe38f);
    }

    .bg-gradient-danger {
        background: linear-gradient(135deg, #dc3545, #ff7a7a);
    }

    /* Quick Links Buttons Hover */
    .btn-hover {
        transition: 0.3s ease;
    }

        .btn-hover:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        }
</style>
