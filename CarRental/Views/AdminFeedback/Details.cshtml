@model CarRental.Models.Feedback

@{
    ViewData["Title"] = "Feedback Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">Feedback Details</h2>

    <div class="card shadow p-4">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Message:</strong></p>
        <div class="border rounded p-3 bg-light">
            @Model.Message
        </div>
        <p class="mt-3"><strong>Submitted On:</strong> @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
