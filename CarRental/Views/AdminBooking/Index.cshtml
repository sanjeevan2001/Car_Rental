@model IEnumerable<CarRental.ViewModels.BookingViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Bookings";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-journal-check me-2"></i> Bookings
        </h2>
        @* <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle me-1"></i> Add Booking
        </a> *@
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Customer</th>
                            <th>Car</th>
                            <th>Pickup Date</th>
                            <th>Return Date</th>
                            <th>Total Cost</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>@booking.CustomerName</td>
                                    <td>@booking.CarName</td>
                                    <td>@booking.PickupDate.ToString("yyyy-MM-dd")</td>
                                    <td>@booking.ReturnDate.ToString("yyyy-MM-dd")</td>
                                    <td class="fw-bold text-success">@booking.TotalCost.ToString("C", new System.Globalization.CultureInfo("si-LK"))</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-primary btn-sm me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash3-fill"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No bookings available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
