@model CarRental.ViewModels.BookingViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Booking";
}

<!-- Google Fonts + Animate.css -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container mt-5">

    <h2 class="page-title fw-bold text-primary animate__animated animate__fadeInDown">
        <i class="bi bi-journal-plus me-2"></i> Create Booking
    </h2>

    <div class="glass-card animate__animated animate__fadeInUp">
        <form asp-action="Create" method="post">
            <div class="row g-4">
                <!-- Customer -->
                <div class="col-md-6 fade-row">
                    <label asp-for="CustomerId" class="form-label text-light">Customer</label>
                    <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.Customers">
                        <option value="">-- Select Customer --</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <!-- Car -->
                <div class="col-md-6 fade-row">
                    <label asp-for="CarId" class="form-label text-light">Car</label>
                    <select asp-for="CarId" class="form-select" asp-items="ViewBag.Cars">
                        <option value="">-- Select Car --</option>
                    </select>
                    <span asp-validation-for="CarId" class="text-danger"></span>
                </div>

                <!-- Pickup Date -->
                <div class="col-md-6 fade-row">
                    <label asp-for="PickupDate" class="form-label text-light">Pickup Date</label>
                    <input asp-for="PickupDate" type="date" class="form-control" />
                    <span asp-validation-for="PickupDate" class="text-danger"></span>
                </div>

                <!-- Return Date -->
                <div class="col-md-6 fade-row">
                    <label asp-for="ReturnDate" class="form-label text-light">Return Date</label>
                    <input asp-for="ReturnDate" type="date" class="form-control" />
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Buttons -->
            <div class="mt-4 d-flex gap-2 fade-row">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-save2 me-1"></i> Save Booking
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #1c1c1c;
    }

    .page-title {
        font-size: 1.8rem;
        color: #0d6efd;
        margin-bottom: 1.5rem;
    }

    /* Glass Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(18px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.25);
        box-shadow: 0 8px 30px rgba(0,0,0,0.25);
        padding: 2rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.35);
        }

    .form-label {
        font-weight: 600;
        color: #f0f0f0;
    }

    .form-control, .form-select {
        border-radius: 0.5rem;
        padding: 0.5rem;
        background: rgba(255,255,255,0.15);
        color: #fff;
        border: 1px solid rgba(255,255,255,0.25);
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 12px rgba(13,110,253,0.25);
            background: rgba(255,255,255,0.2);
            color: #fff;
        }

    .btn-success, .btn-outline-secondary {
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.25);
        }

        .btn-outline-secondary:hover {
            background: rgba(255,255,255,0.2);
            transform: translateY(-2px);
            color: #fff;
        }

    .fade-row {
        animation: fadeInUp 0.7s ease forwards;
    }

    /* Keyframes */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media(max - width:576px) {
        .glass-card

    {
        padding: 1.5rem;
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
