@model CarRental.ViewModels.CarViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Car";
}

<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="text-center text-success fw-bold mb-4 animate__animated animate__fadeInDown">
        <i class="bi bi-plus-circle-fill me-2"></i> Add New Car
    </h2>

    <div class="card glass-card shadow-lg mx-auto p-4 animate__animated animate__fadeInUp" style="max-width: 700px;">
        <form asp-action="AddCar" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div class="row g-3 mb-3">
                <!-- Car Name -->
                <div class="col-md-6">
                    <label asp-for="CarName" class="form-label fw-bold">Car Name</label>
                    <input asp-for="CarName" class="form-control form-input" required />
                    <span asp-validation-for="CarName" class="text-danger"></span>
                </div>

                <!-- Car Model -->
                <div class="col-md-6">
                    <label asp-for="CarModel" class="form-label fw-bold">Car Model</label>
                    <input asp-for="CarModel" class="form-control form-input" required />
                    <span asp-validation-for="CarModel" class="text-danger"></span>
                </div>

                <!-- Car Brand -->
                <div class="col-md-6">
                    <label asp-for="CarBrand" class="form-label fw-bold">Brand</label>
                    <input asp-for="CarBrand" class="form-control form-input" required />
                    <span asp-validation-for="CarBrand" class="text-danger"></span>
                </div>

                <!-- Seats -->
                <div class="col-md-6">
                    <label asp-for="Seats" class="form-label fw-bold">Seats</label>
                    <input asp-for="Seats" type="number" class="form-control form-input" required />
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>

                <!-- Fuel Type -->
                <div class="col-md-6">
                    <label asp-for="FuelType" class="form-label fw-bold">Fuel Type</label>
                    <input asp-for="FuelType" class="form-control form-input" required />
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>

                <!-- Price Per Day -->
                <div class="col-md-6">
                    <label asp-for="PricePerday" class="form-label fw-bold">Price Per Day (LKR)</label>
                    <input asp-for="PricePerday" type="number" step="0.01" class="form-control form-input" required />
                    <span asp-validation-for="PricePerday" class="text-danger"></span>
                </div>

                <!-- Car Image -->
                <div class="col-md-12">
                    <label asp-for="ImageFile" class="form-label fw-bold">Upload Car Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control file-input" />
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-center gap-3 mt-3">
                <button type="submit" class="btn btn-success btn-hover px-4">
                    <i class="bi bi-save me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-hover px-4">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    /* Glass Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 28px rgba(0,0,0,0.25);
        }

    /* Input focus */
    .form-input:focus, .file-input:focus {
        border-color: #198754;
        box-shadow: 0 0 10px rgba(25,135,84,0.5);
        transition: all 0.3s ease;
    }

    /* Buttons */
    .btn-hover {
        transition: all 0.3s ease-in-out;
        border-radius: 8px;
    }

        .btn-hover:hover {
            transform: scale(1.08);
            box-shadow: 0 6px 14px rgba(0,0,0,0.25);
        }

    /* FadeInUp keyframes */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
