@model CarRental.Models.Feedback

@{
    ViewData["Title"] = "Delete Feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="page-title text-center mb-4 animate__animated animate__fadeInDown">⚠ Delete Feedback</h2>

    <!-- Glass Alert -->
    <div class="alert-glass mx-auto mb-4 animate__animated animate__pulse">
        <h5>⚠ Are you sure you want to permanently delete this feedback?</h5>
    </div>

    <!-- Glass Card -->
    <div class="card-glass shadow-lg mx-auto p-4 animate__animated animate__fadeInUp" style="max-width: 700px;">
        <p><strong>👤 Name:</strong> @Model.Name</p>
        <p><strong>📧 Email:</strong> @Model.Email</p>
        <p><strong>💬 Message:</strong></p>
        <div class="message-box-glass">@Model.Message</div>
        <p class="mt-3"><strong>🕒 Submitted On:</strong> @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <!-- Actions -->
    <form asp-action="DeleteConfirmed" method="post" class="mt-4 text-center animate__animated animate__fadeInUp animate__faster">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-custom me-2">
            🗑 Yes, Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-custom">
            ❌ Cancel
        </a>
    </form>
</div>

<style>
    /* Page title */
    .page-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        color: #e63946;
    }

    /* Glass Alert */
    .alert-glass {
        background: rgba(220, 53, 69, 0.25);
        backdrop-filter: blur(15px) saturate(150%);
        -webkit-backdrop-filter: blur(15px) saturate(150%);
        color: #fff;
        border-radius: 12px;
        padding: 15px;
        font-weight: 600;
        font-size: 1rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.2);
    }

    /* Glass Card */
    .card-glass {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(18px) saturate(180%);
        -webkit-backdrop-filter: blur(18px) saturate(180%);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-glass:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.35);
        }

    /* Message Box Glass */
    .message-box-glass {
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px) saturate(150%);
        -webkit-backdrop-filter: blur(10px) saturate(150%);
        border-left: 4px solid #0d6efd;
        border-radius: 8px;
        padding: 12px;
        font-size: 15px;
        color: #fff;
        transition: transform 0.2s ease-in-out;
    }

        .message-box-glass:hover {
            transform: scale(1.02);
        }

    /* Buttons */
    .btn-custom {
        border-radius: 30px;
        padding: 8px 20px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.2s ease-in-out;
    }

        .btn-custom:hover {
            transform: translateY(-2px) scale(1.05);
        }

    /* Danger / Secondary Buttons */
    .btn-danger {
        background: #dc3545;
        border: none;
        color: #fff;
    }

        .btn-danger:hover {
            background: #b02a37;
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: #fff;
    }

        .btn-secondary:hover {
            background: #565e64;
        }

    /* Animate.css duration */
    .animate__fadeInUp, .animate__fadeInDown {
        animation-duration: 0.8s;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .btn-custom {
            width: 100%;
            margin-bottom: 0.5rem;
        }
    }
</style>
