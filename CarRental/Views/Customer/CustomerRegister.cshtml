@model CarRental.ViewModel.UserCustomer

<h2 class="title">Customer Registration</h2>

<div class="registration-card">
    <form method="post" novalidate>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" type="password" />
            <span asp-validation-for="ConfirmPassword" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" />
            <span asp-validation-for="FullName" class="error"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Gender)
            @Html.DropDownListFor(m => m.Gender,
                     new SelectList(Enum.GetValues(typeof(CarRental.Ennum.CustomerGender))),
                     "Select Gender",
                     new { @class = "dropdown" })
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "error" })
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" />
            <span asp-validation-for="Address" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserEmail"></label>
            <input asp-for="UserEmail" />
            <span asp-validation-for="UserEmail" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="LicenseNumber"></label>
            <input asp-for="LicenseNumber" />
            <span asp-validation-for="LicenseNumber" class="error"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="themed-btn">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    :root {
        --primary-dark: #050b1e;
        --primary-mid: #193060;
        --primary: #315381;
        --accent: #859fc0;
        --light: #cee0f4;
    }

    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        font-family: "Segoe UI", system-ui, sans-serif;
        color: var(--light);
        line-height: 1.5;
        position: relative;
        background: linear-gradient(270deg,
            var(--primary-dark),
            var(--primary-mid),
            var(--primary),
            var(--accent),
            var(--light));
        background-size: 1000% 1000%;
        animation: waveBg 20s ease infinite;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
    }

    /* Dark overlay for readability */
    body::before {
        content: "";
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0,0,0,0.35);
        z-index: -1;
    }

    @@keyframes waveBg {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .title {
        text-align: center;
        margin: 40px 0 25px;
        font-size: 32px;
        font-weight: 700;
        color: #fff;
        letter-spacing: 1px;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
    }

    .registration-card {
        background: rgba(0, 0, 0, 0.35); /* darker glass */
        backdrop-filter: blur(12px);
        color: #fff;
        max-width: 650px;
        margin: 0 auto 50px;
        padding: 40px;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.25);
        box-shadow: 0 10px 35px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }

    .registration-card:hover {
        transform: translateY(-5px);
    }

    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

    label {
        margin-bottom: 6px;
        font-size: 14px;
        font-weight: 600;
        color: #fff;
        text-shadow: 1px 1px 6px rgba(0,0,0,0.6);
    }

    input, .dropdown {
        padding: 12px 14px;
        border: 1.8px solid rgba(255, 255, 255, 0.4);
        border-radius: 10px;
        font-size: 15px;
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        transition: border-color 0.3s, box-shadow 0.3s, background 0.3s;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.5);
    }

    input:focus, .dropdown:focus {
        border-color: var(--light);
        background: rgba(255, 255, 255, 0.2);
        outline: none;
        box-shadow: 0 0 12px rgba(255, 255, 255, 0.4);
    }

    .themed-btn {
        background: linear-gradient(90deg, var(--primary), var(--primary-mid));
        border: none;
        color: white;
        padding: 14px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.3s ease, background 0.3s;
    }

    .themed-btn:hover {
        transform: translateY(-2px);
        background: linear-gradient(90deg, var(--primary-mid), var(--primary));
        box-shadow: 0 6px 18px rgba(25, 48, 96, 0.4);
    }

    .error {
        font-size: 13px;
        color: #ff6b6b;
        margin-top: 4px;
        text-shadow: none;
    }
</style>
