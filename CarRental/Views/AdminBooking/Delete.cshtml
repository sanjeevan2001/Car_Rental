@model CarRental.ViewModels.BookingViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Booking";
}

<!-- Google Fonts + Animate.css -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container mt-5 animate__animated animate__fadeIn">

    <h2 class="page-title fw-bold text-danger animate__animated animate__fadeInDown">
        <i class="bi bi-trash3-fill me-2"></i> Delete Booking
    </h2>

    <div class="delete-alert animate__animated animate__pulse">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Are you sure you want to <strong>delete this booking</strong>? This action cannot be undone.
    </div>

    <div class="glass-card animate__animated animate__fadeInUp">
        <h5 class="mb-3 text-primary"><i class="bi bi-info-circle-fill me-1"></i> Booking Details</h5>
        <p><strong>Customer:</strong> @Model.CustomerName</p>
        <p><strong>Car:</strong> @Model.CarName</p>
        <p><strong>Pickup Date:</strong> @Model.PickupDate:yyyy-MM-dd</p>
        <p><strong>Return Date:</strong> @Model.ReturnDate:yyyy-MM-dd</p>
        <p><strong>Total Cost:</strong> LKR @Model.TotalCost.ToString("N2")</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-4 d-flex gap-2">
        <input type="hidden" asp-for="BookingId" />
        <button type="submit" class="btn btn-danger btn-lg">
            <i class="bi bi-trash3-fill me-1"></i> Yes, Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left me-1"></i> Cancel
        </a>
    </form>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #1c1c1c;
    }

    .page-title {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: #dc3545;
    }

    /* Alert Box */
    .delete-alert {
        font-weight: 600;
        background: rgba(220,53,69,0.85);
        color: #fff;
        padding: 12px 16px;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        box-shadow: 0 6px 20px rgba(220,53,69,0.3);
        animation: pulse 1.5s infinite;
    }

    /* Glass Card */
    .glass-card {
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(18px);
        border-radius: 1rem;
        border: 1px solid rgba(255,255,255,0.25);
        box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        padding: 2rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.35);
        }

        .glass-card h5 {
            font-weight: 700;
        }

    /* Buttons */
    .btn-danger {
        background: linear-gradient(90deg, #dc3545, #b02a37);
        border: none;
        font-weight: 600;
        border-radius: 0.5rem;
        padding: 12px 20px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(90deg, #b02a37, #842029);
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(220,53,69,0.4);
        }

    .btn-outline-secondary {
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: rgba(255,255,255,0.15);
            transform: translateY(-2px);
            color: #fff;
        }

    /* Animations */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0% {
            box-shadow: 0 0 0 rgba(220,53,69,0.3);
        }

        50% {
            box-shadow: 0 0 18px rgba(220,53,69,0.6);
        }

        100% {
            box-shadow: 0 0 0 rgba(220,53,69,0.3);
        }
    }

    /* Responsive */
    @@media(max - width:576px) {
        .glass-card

    {
        padding: 1.5rem;
    }

    }
</style>
