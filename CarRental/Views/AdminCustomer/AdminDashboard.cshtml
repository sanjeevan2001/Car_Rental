@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Full-page background -->
<div class="bg-image"></div>

<div class="container py-5">
    <h2 class="fw-bold text-center mb-5 text-white">
        <i class="bi bi-speedometer2 text-warning me-2"></i> Admin Dashboard
    </h2>

    <div class="row g-4 justify-content-center">
        <!-- Dashboard Cards -->
        <div class="col-lg-3 col-md-6">
            <div class="card dash-card text-center p-4 shadow">
                <i class="bi bi-people-fill text-success fs-1 mb-3"></i>
                <h5 class="fw-bold mb-3">Manage Customers</h5>
                <a asp-action="CustomerList" class="btn btn-success w-100 btn-hover">View Customers</a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card dash-card text-center p-4 shadow">
                <i class="bi bi-car-front-fill text-primary fs-1 mb-3"></i>
                <h5 class="fw-bold mb-3">Manage Cars</h5>
                <a asp-controller="AdminCar" asp-action="Index" class="btn btn-primary w-100 btn-hover">View Cars</a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card dash-card text-center p-4 shadow">
                <i class="bi bi-journal-check text-warning fs-1 mb-3"></i>
                <h5 class="fw-bold mb-3">Manage Bookings</h5>
                <a asp-controller="AdminBooking" asp-action="Index" class="btn btn-warning w-100 btn-hover">View Bookings</a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card dash-card text-center p-4 shadow">
                <i class="bi bi-shield-lock-fill text-danger fs-1 mb-3"></i>
                <h5 class="fw-bold mb-3">Manage Users</h5>
                <a asp-controller="AdminUser" asp-action="Index" class="btn btn-danger w-100 btn-hover">View Users</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Full-page background image */
    .bg-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/images/Extra/ContactPage.jpg') no-repeat center center/cover;
        z-index: -1;
        filter: brightness(0.6);
    }

    /* Dashboard card style */
    .dash-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 1rem;
        border: 1px solid rgba(255,255,255,0.3);
        min-height: 230px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .dash-card:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 15px 30px rgba(0,0,0,0.3);
        }

        .dash-card i {
            transition: transform 0.3s ease;
        }

        .dash-card:hover i {
            transform: scale(1.2);
        }

    .btn-hover {
        transition: all 0.3s ease;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        }

    h5 {
        color: #fff;
    }

    @@media (max-width: 768px) {
        .dash-card

    {
        min-height: 250px;
    }

    }
</style>
