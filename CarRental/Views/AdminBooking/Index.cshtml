@model IEnumerable<CarRental.ViewModels.BookingViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Bookings";
}

<h2 class="mb-3">Bookings</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Add Booking</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Customer</th>
            <th>Car</th>
            <th>Pickup Date</th>
            <th>Return Date</th>
            <th>Total Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.CustomerName</td>
                <td>@booking.CarName</td>
                <td>@booking.PickupDate:yyyy-MM-dd</td>
                <td>@booking.ReturnDate:yyyy-MM-dd</td>
                <td>@booking.TotalCost:C</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
