@model CarRental.ViewModels.CarViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Car";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-success">
        <i class="bi bi-plus-circle-fill me-2"></i> Add New Car
    </h2>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <form asp-action="AddCar" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="CarName" class="form-label fw-bold"></label>
                    <input asp-for="CarName" class="form-control" />
                    <span asp-validation-for="CarName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CarModel" class="form-label fw-bold"></label>
                    <input asp-for="CarModel" class="form-control" />
                    <span asp-validation-for="CarModel" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CarBrand" class="form-label fw-bold"></label>
                    <input asp-for="CarBrand" class="form-control" />
                    <span asp-validation-for="CarBrand" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Seats" class="form-label fw-bold"></label>
                    <input asp-for="Seats" class="form-control" type="number" />
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FuelType" class="form-label fw-bold"></label>
                    <input asp-for="FuelType" class="form-control" />
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PricePerday" class="form-label fw-bold"></label>
                    <input asp-for="PricePerday" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="PricePerday" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label fw-bold">Upload Car Image</label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                </div>

                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
