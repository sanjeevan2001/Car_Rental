@model CarRental.ViewModels.CarViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Car";
}

<div class="container py-5">
    <h2 class="text-center fw-bold mb-5 text-primary">
        <i class="bi bi-pencil-square me-2"></i> Edit Car
    </h2>

    <div class="card shadow border-0 mx-auto p-4" style="max-width:720px; background-color:#f8f9fa;">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="CarId" />

                <div class="row g-3">
                    <!-- Car Name -->
                    <div class="col-md-6">
                        <label asp-for="CarName" class="form-label fw-bold">Car Name</label>
                        <input asp-for="CarName" class="form-control" />
                        <span asp-validation-for="CarName" class="text-danger"></span>
                    </div>

                    <!-- Car Model -->
                    <div class="col-md-6">
                        <label asp-for="CarModel" class="form-label fw-bold">Car Model</label>
                        <input asp-for="CarModel" class="form-control" />
                        <span asp-validation-for="CarModel" class="text-danger"></span>
                    </div>

                    <!-- Car Brand -->
                    <div class="col-md-6">
                        <label asp-for="CarBrand" class="form-label fw-bold">Car Brand</label>
                        <input asp-for="CarBrand" class="form-control" />
                        <span asp-validation-for="CarBrand" class="text-danger"></span>
                    </div>

                    <!-- Seats -->
                    <div class="col-md-6">
                        <label asp-for="Seats" class="form-label fw-bold">Seats</label>
                        <input asp-for="Seats" type="number" class="form-control" />
                        <span asp-validation-for="Seats" class="text-danger"></span>
                    </div>

                    <!-- Fuel Type -->
                    <div class="col-md-6">
                        <label asp-for="FuelType" class="form-label fw-bold">Fuel Type</label>
                        <input asp-for="FuelType" class="form-control" />
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>

                    <!-- Price Per Day -->
                    <div class="col-md-6">
                        <label asp-for="PricePerday" class="form-label fw-bold">Price Per Day</label>
                        <input asp-for="PricePerday" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="PricePerday" class="text-danger"></span>
                    </div>

                    <!-- Current Image -->
                    <div class="col-12 text-center mt-3">
                        <label class="form-label fw-bold">Current Image</label><br />
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Car Image" class="img-thumbnail mb-2" style="max-width:150px;" />
                        }
                        else
                        {
                            <p class="text-muted">No image uploaded</p>
                        }
                    </div>

                    <!-- Upload New Image -->
                    <div class="col-12">
                        <label asp-for="ImageFile" class="form-label fw-bold">Upload New Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Label color */
    .form-label {
        color: #212529;
        font-weight: 600;
    }

    /* Input focus */
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 8px rgba(13,110,253,0.3);
        background-color: #fff;
    }

    /* Card hover */
    .card {
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 28px rgba(0,0,0,0.15);
        }

    /* Buttons hover */
    .btn-lg:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        transition: all 0.3s ease-in-out;
    }

    /* Image hover */
    .img-thumbnail:hover {
        transform: scale(1.05);
        transition: all 0.3s ease;
    }

    /* Responsive buttons */
    @@media(max - width:576px) {
        .btn-lg

    {
        width: 48%;
        font-size: 0.9rem;
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
