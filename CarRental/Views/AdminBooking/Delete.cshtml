@model CarRental.ViewModels.BookingViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Booking";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-danger">
        <i class="bi bi-trash3-fill me-2"></i> Delete Booking
    </h2>

    <div class="alert alert-warning rounded-3 d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Are you sure you want to delete this booking? This action cannot be undone.
    </div>

    <div class="card shadow-sm border-0 rounded-4 mb-4 p-4">
        <h5 class="fw-bold mb-3">Booking Details</h5>
        <p><strong>Customer:</strong> @Model.CustomerName</p>
        <p><strong>Car:</strong> @Model.CarName</p>
        <p><strong>Pickup Date:</strong> @Model.PickupDate:yyyy-MM-dd</p>
        <p><strong>Return Date:</strong> @Model.ReturnDate:yyyy-MM-dd</p>
        <p><strong>Total Cost:</strong> @Model.TotalCost:C</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookingId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash3-fill me-1"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>
