@model IEnumerable<CarRental.Models.User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
}

<div class="container my-4 animate-fade-slide">
    <h2 class="text-primary mb-4">Manage Users</h2>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th>Username</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="text-center">
                    <td>@user.UserName</td>
                    <td>@user.Password</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-success me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Fade-in slide-up animation */
    @@keyframes fadeSlideUp {
        0%

    {
        opacity: 0;
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .animate-fade-slide {
        opacity: 0;
        animation: fadeSlideUp 0.8s forwards;
    }

    h2 {
        font-weight: 700;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    }

    table th, table td {
        vertical-align: middle;
    }

    .btn-success, .btn-info {
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-success:hover {
            background-color: #198754;
            color: #fff;
        }

        .btn-info:hover {
            background-color: #0dcaf0;
            color: #fff;
        }
</style>
