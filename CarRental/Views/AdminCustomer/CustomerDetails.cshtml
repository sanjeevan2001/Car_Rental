@model CarRental.Models.Customer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<div class="card mb-3">
    <div class="card-header">
        <h4>@Model.FullName</h4>
    </div>
    <div class="card-body">
        <p><strong>Email:</strong> @Model.UserEmail</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Gender:</strong> @Model.Gender</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>License Number:</strong> @Model.LicenseNumber</p>
        <p><strong>Username:</strong> @Model.User?.UserName</p>
    </div>
</div>

<h4>Bookings</h4>
@if (Model.Bookings != null && Model.Bookings.Any())
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Booking ID</th>
                <th>Booking Date</th>
                <th>Car</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    @* <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td> *@
                    <td>@booking.Car?.CarName</td>
                    @* <td>@booking.Status</td> *@
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings available for this customer.</p>
}

<a asp-action="CustomerList" class="btn btn-primary">Back to List</a>
<a asp-action="EditCustomer" asp-route-id="@Model.CustomerId" class="btn btn-warning">Edit</a>
<a asp-action="DeleteCustomer" asp-route-id="@Model.CustomerId" class="btn btn-danger">Delete</a>











