@model CarRental.Models.Feedback

@{
    ViewData["Title"] = "Delete Feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger fw-bold">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Feedback
    </h2>

    <div class="alert alert-warning d-flex align-items-center shadow-sm rounded-3 text-dark">
        <i class="bi bi-exclamation-circle-fill fs-4 me-2 text-danger"></i>
        <div>
            <strong class="text-dark">Warning:</strong>
            Are you sure you want to permanently delete this feedback?
            This action <u>cannot</u> be undone.
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4 mt-4">
        <div class="card-header text-white fw-bold"
             style="background: linear-gradient(90deg, #dc3545, #b02a37);">
            <i class="bi bi-person-lines-fill me-2"></i> Feedback Details
        </div>
        <div class="card-body p-4 text-dark">
            <p><strong>Name:</strong> <span class="text-dark">@Model.Name</span></p>
            <p><strong>Email:</strong> <span class="text-dark">@Model.Email</span></p>
            <p><strong>Message:</strong></p>
            <div class="border-start border-4 border-danger bg-light rounded p-3 text-dark"
                 style="white-space: pre-wrap;">
                @Model.Message
            </div>
            <p class="mt-3">
                <strong>Submitted On:</strong>
                <span class="text-dark">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</span>
            </p>
        </div>
    </div>


    <form asp-action="DeleteConfirmed" method="post" class="mt-4 d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger rounded-pill px-4">
            <i class="bi bi-trash me-1"></i> Yes, Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </form>
</div>
