@model CarRental.ViewModels.AdminDashboardViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-speedometer2"></i> Admin Dashboard
        </h2>
        <span class="badge bg-secondary fs-6 shadow-sm">Welcome, Admin</span>
    </div>

    <!-- Statistic Cards -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center bg-gradient-primary text-white rounded">
                    <i class="bi bi-car-front-fill fs-1 mb-2"></i>
                    <h5 class="card-title">Total Cars</h5>
                    <p class="fs-3 fw-bold">@Model.TotalCars</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center bg-gradient-success text-white rounded">
                    <i class="bi bi-check-circle-fill fs-1 mb-2"></i>
                    <h5 class="card-title">Available Cars</h5>
                    <p class="fs-3 fw-bold">@Model.AvailableCars</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center bg-gradient-warning text-dark rounded">
                    <i class="bi bi-calendar2-check-fill fs-1 mb-2"></i>
                    <h5 class="card-title">Total Bookings</h5>
                    <p class="fs-3 fw-bold">@Model.TotalBookings</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center bg-gradient-danger text-white rounded">
                    <i class="bi bi-people-fill fs-1 mb-2"></i>
                    <h5 class="card-title">Total Customers</h5>
                    <p class="fs-3 fw-bold">@Model.TotalCustomers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="card shadow mt-5 border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-lightning-charge-fill"></i> Quick Links</h5>
        </div>
        <div class="card-body d-flex flex-wrap">
            <a asp-controller="AdminCar" asp-action="Index" class="btn btn-outline-primary m-2 px-4">
                <i class="bi bi-car-front"></i> Manage Cars
            </a>
            <a asp-controller="AdminBooking" asp-action="Index" class="btn btn-outline-warning m-2 px-4">
                <i class="bi bi-journal-check"></i> Manage Bookings
            </a>
            <a asp-controller="AdminUser" asp-action="Index" class="btn btn-outline-success m-2 px-4">
                <i class="bi bi-person-badge"></i> Manage Customers
            </a>
            <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark m-2 px-4">
                <i class="bi bi-shield-lock"></i> Manage Users
            </a>
        </div>
    </div>


