@model CarRental.ViewModels.BookingViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Booking";
}

<style>
    /* Page Fade-in */
    .page-animate {
        animation: fadeIn 0.8s ease-in-out;
    }
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Title */
    .page-title {
        font-size: 1.8rem;
        font-weight: 800;
        color: #dc3545;
        letter-spacing: 0.5px;
        text-shadow: 0 2px 6px rgba(220, 53, 69, 0.2);
        animation: slideInLeft 0.9s ease;
    }
    @@keyframes slideInLeft {
        from

    {
        opacity: 0;
        transform: translateX(-30px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    /* Alert Box */
    .delete-alert {
        font-weight: 600;
        background: rgba(255, 193, 7, 0.15);
        border: 1px solid rgba(255, 193, 7, 0.5);
        animation: pulseAlert 1.5s infinite;
    }
    @@keyframes pulseAlert {
        0%

    {
        box-shadow: 0 0 0 rgba(255,193,7,0.3);
    }

    50% {
        box-shadow: 0 0 18px rgba(255,193,7,0.6);
    }

    100% {
        box-shadow: 0 0 0 rgba(255,193,7,0.3);
    }

    }

    /* Card Styling */
    .glass-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        border: 1px solid rgba(220, 53, 69, 0.1);
        transition: all 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 18px 40px rgba(220, 53, 69, 0.25);
        }

        .glass-card h5 {
            color: #0d6efd;
            font-weight: 700;
        }

    /* Delete Button */
    .btn-danger {
        background: linear-gradient(90deg, #dc3545, #b02a37);
        border: none;
        font-weight: 600;
        border-radius: 12px;
        padding: 12px 20px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(90deg, #b02a37, #842029);
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(220, 53, 69, 0.4);
        }

    /* Cancel Button */
    .btn-outline-secondary {
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: #f8f9fa;
            transform: translateY(-2px);
        }
</style>

<div class="container mt-5 page-animate">
    <h2 class="page-title mb-4">
        <i class="bi bi-trash3-fill me-2"></i> Delete Booking
    </h2>

    <div class="alert delete-alert rounded-3 d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill me-2 text-warning"></i>
        Are you sure you want to <strong>delete this booking</strong>? This action cannot be undone.
    </div>

    <div class="card glass-card border-0 rounded-4 mb-4 p-4">
        <h5 class="fw-bold mb-3"><i class="bi bi-info-circle-fill me-1"></i> Booking Details</h5>
        <p><strong>Customer:</strong> @Model.CustomerName</p>
        <p><strong>Car:</strong> @Model.CarName</p>
        <p><strong>Pickup Date:</strong> @Model.PickupDate:yyyy-MM-dd</p>
        <p><strong>Return Date:</strong> @Model.ReturnDate:yyyy-MM-dd</p>
        <p><strong>Total Cost:</strong> @Model.TotalCost:C</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookingId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash3-fill me-1"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>
