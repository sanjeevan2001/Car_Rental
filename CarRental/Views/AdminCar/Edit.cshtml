@model CarRental.ViewModels.CarViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Car";
}

<div class="container py-5">
    <h2 class="text-center fw-bold mb-5 text-primary">
        <i class="bi bi-pencil-square me-2"></i> Edit Car
    </h2>

    <div class="card glass-card shadow-lg mx-auto" style="max-width: 700px;">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="CarId" />

                <div class="mb-3">
                    <label asp-for="CarName" class="form-label fw-bold"></label>
                    <input asp-for="CarName" class="form-control form-input" />
                    <span asp-validation-for="CarName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CarModel" class="form-label fw-bold"></label>
                    <input asp-for="CarModel" class="form-control form-input" />
                    <span asp-validation-for="CarModel" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CarBrand" class="form-label fw-bold"></label>
                    <input asp-for="CarBrand" class="form-control form-input" />
                    <span asp-validation-for="CarBrand" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Seats" class="form-label fw-bold"></label>
                    <input asp-for="Seats" type="number" class="form-control form-input" />
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FuelType" class="form-label fw-bold"></label>
                    <input asp-for="FuelType" class="form-control form-input" />
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PricePerday" class="form-label fw-bold"></label>
                    <input asp-for="PricePerday" type="number" step="0.01" class="form-control form-input" />
                    <span asp-validation-for="PricePerday" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Current Image</label><br />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Car Image" class="img-thumbnail mb-2" style="max-width:150px;" />
                    }
                    else
                    {
                        <p class="text-muted">No image uploaded</p>
                    }
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label fw-bold">Upload New Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-success btn-hover">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-hover">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Glass card style */
    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.25);
        }

    .form-input:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 10px rgba(13,110,253,0.4);
        transition: all 0.3s ease;
    }

    .btn-hover {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        }

    .form-label {
        color: #333;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
