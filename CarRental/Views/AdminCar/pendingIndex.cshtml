@model List<CarRental.Models.Car>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-car-front-fill text-primary me-2"></i> Manage Cars
        </h2>
        <a asp-area="" asp-controller="AdminCar" asp-action="AddCar" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle me-1"></i> Add New Car
        </a>
    </div>

    <!-- Cars Table -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <table class="table table-hover align-middle">
                <thead class="table-success">
                    <tr>
                        @* <th>Image</th> *@
                        <th>Car Name</th>
                        <th>Brand</th>
                        <th>Model</th>
                        <th>Seats</th>
                        <th>Fuel</th>
                        <th>Price/Day</th>
                        <th>Availability</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model)
                    {
                        <tr>
                            @* <td>
                                <img src="@car.ImageUrl" alt="@car.CarName"
                                     class="rounded" style="width: 100px; height: 70px; object-fit: cover;" />
                            </td> *@
                            <td>@car.CarName</td>
                            <td>@car.CarBrand</td>
                            <td>@car.CarModel</td>
                            <td>@car.Seats</td>
                            <td>@car.FuelType</td>
                            @* <td class="fw-bold text-success">$@car.PricePerday</td> *@ @* ????? *@
                            <td>
                                @if (car.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Unavailable</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@car.CarId" class="btn btn-info btn-sm me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@car.CarId" class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@car.CarId" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this car?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle me-1"></i> No cars available. Please add a new car.
                </div>
            }
        </div>
    </div>
</div>
