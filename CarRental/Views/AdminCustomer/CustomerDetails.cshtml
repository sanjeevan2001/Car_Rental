@model CarRental.Models.Customer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-5">
    <h2 class="fw-bold text-dark mb-4">
        <i class="bi bi-person-badge-fill text-info me-2"></i> Customer Details
    </h2>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Gender</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.UserEmail</dd>

                <dt class="col-sm-3">License</dt>
                <dd class="col-sm-9">@Model.LicenseNumber</dd>
            </dl>

            <a asp-action="EditCustomer" asp-route-id="@Model.CustomerId" class="btn btn-warning">Edit</a>
            <a asp-action="CustomerList" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
