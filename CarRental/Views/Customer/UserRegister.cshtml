@model CarRental.Models.User
@{
    ViewBag.Title = "User Registration";
    Layout = null; // We are using a custom layout for this page
    var customerId = ViewBag.CustomerId;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet">
    <style>
        /* Your custom CSS styles */
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            background: url('/images/Extra/RegisterBg.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .register-card {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            padding: 40px;
            width: 100%;
            max-width: 450px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .register-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 25px 60px rgba(0, 0, 0, 0.3);
                backdrop-filter: blur(4px);
            }

            .register-card h2 {
                color: #001f3f;
                font-weight: 800;
                text-align: center;
                margin-bottom: 30px;
            }

            .register-card .form-control {
                border-radius: 12px;
                border: 1px solid #ccc;
                padding: 10px 15px;
                font-weight: 500;
                margin-bottom: 15px;
                transition: all 0.3s ease;
            }

                .register-card .form-control:focus {
                    border-color: #0056b3;
                    box-shadow: 0 0 10px rgba(0, 86, 179, 0.3);
                }

            .register-card .btn-success {
                background-color: #001f3f;
                border-radius: 50px;
                font-weight: bold;
                font-size: 16px;
                width: 100%;
                transition: all 0.3s ease;
                border: none; /* Add this to remove default border */
            }

                .register-card .btn-success:hover {
                    background-color: #003366;
                    transform: scale(1.05);
                    box-shadow: 0 10px 25px rgba(0, 0, 64, 0.3);
                }

        .text-danger {
            font-weight: 500;
        }

        .login-link {
            text-align: center;
            margin-top: 20px;
        }

            .login-link a {
                font-weight: bold;
                color: #001f3f;
                text-decoration: none;
            }

                .login-link a:hover {
                    color: #003366;
                }
    </style>
</head>
<body>
    <div class="register-card">
        <h2>User Registration</h2>

        @using (Html.BeginForm("UserRegister", "Customer", FormMethod.Post, new { @id = "userForm" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="customerId" value="@customerId" />

            <div class="mb-3">
                @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success">Register User</button>
        }

        
    </div>
</body>
</html>