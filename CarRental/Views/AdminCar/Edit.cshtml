@model CarRental.ViewModels.CarViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Car";
}

<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="text-center fw-bold mb-5 text-primary animate__animated animate__fadeInDown">
        <i class="bi bi-pencil-square me-2"></i> Edit Car
    </h2>

    <div class="card glass-card shadow-lg mx-auto p-4 animate__animated animate__fadeInUp" style="max-width:720px;">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="CarId" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="CarName" class="form-label fw-bold">Car Name</label>
                    <input asp-for="CarName" class="form-control form-input" />
                    <span asp-validation-for="CarName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CarModel" class="form-label fw-bold">Car Model</label>
                    <input asp-for="CarModel" class="form-control form-input" />
                    <span asp-validation-for="CarModel" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CarBrand" class="form-label fw-bold">Car Brand</label>
                    <input asp-for="CarBrand" class="form-control form-input" />
                    <span asp-validation-for="CarBrand" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Seats" class="form-label fw-bold">Seats</label>
                    <input asp-for="Seats" type="number" class="form-control form-input" />
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FuelType" class="form-label fw-bold">Fuel Type</label>
                    <input asp-for="FuelType" class="form-control form-input" />
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PricePerday" class="form-label fw-bold">Price Per Day</label>
                    <input asp-for="PricePerday" type="number" step="0.01" class="form-control form-input" />
                    <span asp-validation-for="PricePerday" class="text-danger"></span>
                </div>

                <div class="col-12 text-center mt-3">
                    <label class="form-label fw-bold">Current Image</label><br />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Car Image" class="img-thumbnail car-image mb-2" style="max-width:150px;" />
                    }
                    else
                    {
                        <p class="text-muted">No image uploaded</p>
                    }
                </div>

                <div class="col-12">
                    <label asp-for="ImageFile" class="form-label fw-bold">Upload New Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control form-input" />
                </div>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-success btn-lg btn-hover">
                    <i class="bi bi-save me-1"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg btn-hover">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Glass-card style */
    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 28px rgba(0,0,0,0.25);
        }

    /* Inputs focus */
    .form-input:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 10px rgba(13,110,253,0.3);
    }

    /* Buttons hover */
    .btn-hover {
        border-radius: 12px;
        transition: all 0.3s ease-in-out;
    }

        .btn-hover:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 16px rgba(0,0,0,0.25);
        }

    /* Image hover */
    .car-image:hover {
        transform: scale(1.05);
        transition: all 0.3s ease;
    }

    /* Responsive */
    @@media(max - width:576px) {
        .btn-lg

    {
        width: 48%;
        font-size: 0.9rem;
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
