@model CarRental.ViewModels.BookingViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this booking? This action cannot be undone.
</div>

<div class="card p-3 mb-3">
    <p><strong>Customer:</strong> @Model.CustomerName</p>
    <p><strong>Car:</strong> @Model.CarName</p>
    <p><strong>Pickup Date:</strong> @Model.PickupDate:yyyy-MM-dd</p>
    <p><strong>Return Date:</strong> @Model.ReturnDate:yyyy-MM-dd</p>
    <p><strong>Total Cost:</strong> @Model.TotalCost:C</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
