@model CarRental.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "User Registration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<!-- Custom CSS -->
<style>
    body {
        background: linear-gradient(to right, #001f3f, #003366);
        font-family: 'Segoe UI', sans-serif;
    }

    .card-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    .custom-card {
        display: flex;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0, 0, 50, 0.5);
        max-width: 900px;
        width: 100%;
    }

    /* Left image section */
    .card-img-section {
        flex: 1;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

        .card-img-section img {
            width: 100%;
            height: auto;
            border-radius: 15px;
            transition: transform 0.4s ease;
        }

            .card-img-section img:hover {
                transform: scale(1.05);
            }

    /* Right form section */
    .card-form-section {
        flex: 1;
        padding: 40px;
    }

    h2 {
        font-weight: bold;
        color: #001f3f;
    }

    label {
        font-weight: 600;
        color: #001f3f;
    }

    .form-control {
        border-radius: 12px;
        border: 2px solid #003366;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 8px rgba(0, 86, 179, 0.5);
        }

    .btn-success {
        background-color: #003366;
        border: none;
        font-weight: bold;
        font-size: 16px;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #0056b3;
            box-shadow: 0 8px 15px rgba(0, 86, 179, 0.5);
            transform: scale(1.05);
        }

    a {
        color: #003366;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>

<div class="container card-container">
    <div class="custom-card">
        <!-- Left Car Image Section -->
        <div class="card-img-section">
            <img src="~/images/LoginPage.jpg" alt="Random Car" />
        </div>

        <!-- Right Form Section -->
        <div class="card-form-section">
            <h2 class="text-center mb-4">Register</h2>

            <form asp-area="Guest" asp-controller="CustomerRegister" asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-control" asp-items="@(new SelectList(Enum.GetValues(typeof(CarRental.Ennum.CustomerGender))))">
                        <option value="">Select Gender</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LicenseNumber"></label>
                    <input asp-for="LicenseNumber" class="form-control" placeholder="Enter License Number" />
                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Next</button>
            </form>

            <p class="small text-muted mt-3">
                Already have an account?
                <a asp-controller="Login" asp-action="Index" class="fw-bold text-decoration-none">Login</a>
            </p>
        </div>
    </div>
</div>

