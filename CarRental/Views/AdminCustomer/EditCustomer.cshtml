@model CarRental.Models.Customer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-5">
    <h2 class="fw-bold text-danger mb-4">
        <i class="bi bi-trash-fill me-2"></i> Delete Customer
    </h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this customer?
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.UserEmail</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>
            </dl>

            <form asp-action="DeleteCustomer" method="post">
                <input type="hidden" asp-for="CustomerId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="CustomerList" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
