@model CarRental.Models.Feedback

@{
    ViewData["Title"] = "Feedback Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="page-title text-center mb-4 animate__animated animate__fadeInDown">📌 Feedback Details</h2>

    <!-- Glass Card -->
    <div class="card-glass shadow-lg mx-auto p-4 animate__animated animate__fadeInUp" style="max-width: 750px;">
        <div class="card-header-glass fw-bold mb-3">
            User Feedback
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label detail-label">👤 Name:</label>
            <div class="col-sm-9">
                <p class="form-control-plaintext text-light">@Model.Name</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label detail-label">📧 Email:</label>
            <div class="col-sm-9">
                <p class="form-control-plaintext text-light">@Model.Email</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label detail-label">💬 Message:</label>
            <div class="col-sm-9">
                <div class="message-box-glass">@Model.Message</div>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-3 col-form-label detail-label">🕒 Submitted On:</label>
            <div class="col-sm-9">
                <p class="form-control-plaintext text-light">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2 justify-content-center">
            <a asp-action="Index" class="btn btn-secondary btn-custom">⬅ Back to List</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-custom">🗑 Delete</a>
        </div>
    </div>
</div>

<style>
    /* Page title */
    .page-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        color: #00d8ff; /* bright cyan */
        letter-spacing: 1px;
    }

    /* Glass Card */
    .card-glass {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(18px) saturate(180%);
        -webkit-backdrop-filter: blur(18px) saturate(180%);
        border-radius: 1rem;
        border: 1px solid rgba(255,255,255,0.3);
        color: #e0e0e0; /* light grey text */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-glass:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.35);
        }

    /* Glass Card Header */
    .card-header-glass {
        background: rgba(0, 123, 255, 0.5); /* blue header */
        color: #fff;
        backdrop-filter: blur(12px);
        padding: 10px 15px;
        border-radius: 12px;
    }

    /* Message Box Glass */
    .message-box-glass {
        background: rgba(255,255,255,0.2);
        backdrop-filter: blur(10px) saturate(150%);
        -webkit-backdrop-filter: blur(10px) saturate(150%);
        border-left: 4px solid #00d8ff; /* cyan accent */
        border-radius: 8px;
        padding: 12px;
        font-size: 15px;
        color: #fff;
        transition: transform 0.2s ease, background 0.2s ease;
    }

        .message-box-glass:hover {
            transform: scale(1.02);
            background: rgba(255,255,255,0.25);
        }

    /* Labels */
    .detail-label {
        font-weight: 600;
        color: #00d8ff; /* cyan accent for labels */
    }

    /* Buttons */
    .btn-custom {
        border-radius: 30px;
        padding: 8px 18px;
        font-weight: 600;
        transition: transform 0.2s ease-in-out;
    }

        .btn-custom:hover {
            transform: translateY(-2px) scale(1.05);
        }

    /* Danger / Secondary Buttons */
    .btn-danger {
        background: #ff4c4c;
        border: none;
        color: #fff;
    }

        .btn-danger:hover {
            background: #e60000;
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: #fff;
    }

        .btn-secondary:hover {
            background: #565e64;
        }

    /* Animate.css duration */
    .animate__fadeInUp, .animate__fadeInDown {
        animation-duration: 0.8s;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .btn-custom {
            width: 100%;
            margin-bottom: 0.5rem;
        }
    }
</style>
