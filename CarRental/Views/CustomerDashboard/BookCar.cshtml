@model CarRental.Models.Car
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Book Car";
}

<div class="container my-5 animate-slide-fade">

    <!-- Page Title -->
    <h2 class="page-title mb-4 text-center animate__animated animate__fadeInDown">
        <i class="bi bi-car-front-fill me-2"></i> Book @Model.CarName (@Model.CarModel)
    </h2>

    <!-- Booking Form -->
    <form asp-action="BookCar" method="post" class="booking-form mx-auto p-4 shadow-lg rounded animate__animated animate__fadeInUp" style="max-width: 500px;">
        <input type="hidden" asp-for="CarId" value="@Model.CarId" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Pickup Date</label>
            <input type="date" name="pickupDate" class="form-control form-input" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Return Date</label>
            <input type="date" name="returnDate" class="form-control form-input" required />
        </div>

        <div class="d-flex justify-content-center gap-3 mt-3">
            <button type="submit" class="btn btn-success btn-hover px-4 py-2">
                <i class="bi bi-check-circle me-1"></i> Confirm Booking
            </button>
            <a asp-action="AvailableCars" class="btn btn-secondary btn-hover px-4 py-2">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>

<style>
    /* Page Title */
    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #0d6efd;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.2);
    }

    /* Glassmorphism Form */
    .booking-form {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border: 1px solid rgba(255,255,255,0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .booking-form:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.3);
        }

    /* Inputs */
    .form-input {
        background: rgba(255,255,255,0.8);
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 0.5rem;
        padding: 0.5rem 0.75rem;
        transition: all 0.3s ease;
    }

        .form-input:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 10px rgba(13,110,253,0.3);
            outline: none;
        }

    /* Buttons */
    .btn-hover {
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-hover:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5c636a;
        }

    /* Fade-in Slide Animation */
    @@keyframes slideFadeIn {
        0% {
            opacity: 0;
            transform: translateY(25px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-slide-fade {
        opacity: 0;
        animation: slideFadeIn 0.8s forwards;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .booking-form {
            padding: 2rem 1.5rem;
        }

        .d-flex.justify-content-center {
            flex-direction: column;
            gap: 1rem !important;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
