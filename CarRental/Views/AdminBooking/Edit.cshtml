@model CarRental.ViewModels.BookingViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Booking";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-pencil-square me-2"></i> Edit Booking
    </h2>

    <div class="card shadow-lg border-0 rounded-4 p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="BookingId" />

            <div class="mb-3">
                <label asp-for="CustomerId" class="form-label fw-bold">Customer</label>
                <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.Customers">
                    <option value="">-- Select Customer --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CarId" class="form-label fw-bold">Car</label>
                <select asp-for="CarId" class="form-select" asp-items="ViewBag.Cars">
                    <option value="">-- Select Car --</option>
                </select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PickupDate" class="form-label fw-bold">Pickup Date</label>
                <input asp-for="PickupDate" type="date" class="form-control" />
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ReturnDate" class="form-label fw-bold">Return Date</label>
                <input asp-for="ReturnDate" type="date" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-save me-1"></i> Update Booking
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
