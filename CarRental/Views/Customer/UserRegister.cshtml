@model CarRental.ViewModel.CustomerSignupViewModel
@{
    ViewBag.Title = "User Registration";
    Layout = null;
    var customerId = ViewBag.CustomerId;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: url('/images/Extra/UserRegipage1.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
            overflow: hidden;
        }

            /* Dark overlay */
            body::before {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0, 0, 0, 0.55);
                backdrop-filter: blur(2px);
                z-index: 0;
            }

        /* Glassmorphism card */
        .register-card {
            position: relative;
            z-index: 1;
            backdrop-filter: blur(12px);
            background: rgba(255, 255, 255, 0.15);
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            padding: 30px;
            max-width: 380px;
            width: 100%;
            color: #fff;
            animation: fadeInUp 1s ease;
            border: 1px solid rgba(255, 255, 255, 0.25);
        }

            .register-card h2 {
                font-weight: 700;
                text-align: center;
                margin-bottom: 20px;
                color: #fff;
                font-size: 20px;
            }

        /* Input box */
        .form-control {
            border-radius: 10px;
            margin-bottom: 12px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.12);
            border: 1px solid rgba(255, 255, 255, 0.25);
            color: #fff;
            font-size: 14px;
        }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.22);
                outline: none;
                box-shadow: 0 0 6px rgba(0, 123, 255, 0.7);
                border-color: #66afe9;
            }

        /* Placeholder white */
        ::placeholder {
            color: rgba(255, 255, 255, 0.7);
            font-size: 13px;
        }

        /* Labels */
        .form-label {
            color: #eee;
            font-weight: 600;
            font-size: 14px;
        }

        /* Buttons */
        .btn-glass {
            background: linear-gradient(135deg, #001f3f, #003366);
            border-radius: 40px;
            font-weight: 600;
            font-size: 14px;
            width: 100%;
            padding: 10px;
            border: none;
            color: #fff;
            transition: 0.3s;
        }

            .btn-glass:hover {
                background: linear-gradient(135deg, #003366, #00509e);
                transform: scale(1.04);
                box-shadow: 0 5px 12px rgba(0, 0, 0, 0.4);
            }

        /* Small text links */
        .register-card p {
            margin-top: 12px;
            text-align: center;
            font-size: 13px;
        }

        .register-card a {
            color: #00cfff;
            font-weight: 600;
            text-decoration: none;
            font-size: 13px;
            transition: color 0.3s;
        }

            .register-card a:hover {
                color: #66d9ff;
                text-decoration: underline;
            }

        /* Animation */
        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(35px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <div class="register-card">
        <h2><i class="bi bi-person-plus-fill"></i> User Registration</h2>

        @using (Html.BeginForm("UserRegister", "Customer", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="customerId" value="@customerId" />

            <div class="mb-2">
                @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter Username" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-warning small" })
            </div>

            <div class="mb-2">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Enter Phone Number" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-warning small" })
            </div>

            <div class="mb-2">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-warning small" })
            </div>

            <div class="mb-2">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-warning small" })
            </div>

            <button type="submit" class="btn btn-glass">Next</button>

            <p class="small mt-3">
                Already have an account?
                <a asp-controller="Login" asp-action="Index">Login</a>
            </p>
        }
    </div>
</body>
</html>
