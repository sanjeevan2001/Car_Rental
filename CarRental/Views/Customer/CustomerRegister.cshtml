@model CarRental.ViewModel.UserCustomer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5 d-flex justify-content-center align-items-start" style="min-height:100vh;">
    <div class="col-12 col-md-6">

        <h2 class="text-center mb-4 text-white fw-bold">Customer Registration</h2>

        <div class="card p-4 shadow-lg rounded-4 animate__animated animate__fadeInUp" style="background: rgba(0,0,0,0.4); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.2);">

            <form method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label text-white"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter Username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-white"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label text-white"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label text-white"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Gender, new { @class = "form-label text-white" })
                    @Html.DropDownListFor(m => m.Gender,
                    new SelectList(Enum.GetValues(typeof(CarRental.Ennum.CustomerGender))),
                                        "Select Gender",
                                        new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label text-white"></label>
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label text-white"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserEmail" class="form-label text-white"></label>
                    <input asp-for="UserEmail" class="form-control" placeholder="Email" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LicenseNumber" class="form-label text-white"></label>
                    <input asp-for="LicenseNumber" class="form-control" placeholder="License Number" />
                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-bold">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: url('/images/Extra/UserRegipage.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    /* optional: text shadow for readability */
    .form-label {
        text-shadow: 1px 1px 4px rgba(0,0,0,0.7);
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
