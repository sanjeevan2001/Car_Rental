@model CarRental.ViewModel.RegisterCustomerViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: 'Plus Jakarta Sans', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url('/images/Extra/UserRegipage.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
        }

            /* Dark overlay */
            body::before {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0,0,0,0.5);
                z-index: 0;
            }

        .register-card {
            position: relative;
            z-index: 1;
            max-width: 420px;
            width: 100%;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            border-radius: 16px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
            padding: 30px 25px;
            color: #fff;
            border: 1px solid rgba(255,255,255,0.25);
            animation: fadeInUp 1s ease;
        }

            .register-card h2 {
                text-align: center;
                font-weight: 700;
                margin-bottom: 20px;
                font-size: 22px;
                color: #fff;
            }

        .form-control {
            border-radius: 10px;
            background: rgba(255,255,255,0.12);
            border: 1px solid rgba(255,255,255,0.25);
            color: #fff;
            margin-bottom: 12px;
            padding: 10px;
            font-size: 14px;
        }

            .form-control:focus {
                background: rgba(255,255,255,0.22);
                box-shadow: 0 0 6px rgba(0,123,255,0.7);
                border-color: #66afe9;
                outline: none;
            }

        ::placeholder {
            color: rgba(255,255,255,0.7);
            font-size: 13px;
        }

        .form-label {
            color: #eee;
            font-weight: 600;
            font-size: 14px;
        }

        .btn-glass {
            background: linear-gradient(135deg, #001f3f, #003366);
            border-radius: 40px;
            font-weight: 600;
            font-size: 14px;
            width: 100%;
            padding: 10px;
            border: none;
            color: #fff;
            transition: 0.3s;
        }

            .btn-glass:hover {
                background: linear-gradient(135deg, #003366, #00509e);
                transform: scale(1.04);
                box-shadow: 0 5px 12px rgba(0,0,0,0.4);
            }

        .register-card p {
            margin-top: 12px;
            text-align: center;
            font-size: 13px;
        }

        .register-card a {
            color: #00cfff;
            font-weight: 600;
            text-decoration: none;
            font-size: 13px;
            transition: color 0.3s;
        }

            .register-card a:hover {
                color: #66d9ff;
                text-decoration: underline;
            }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(35px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <div class="register-card">
        <h2><i class="bi bi-person-plus-fill"></i> Customer Register</h2>

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-2">
                @Html.LabelFor(m => m.FullName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" }) 
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-warning small" })
            </div>

            <div class="mb-2">
                @Html.LabelFor(m => m.Gender, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.Gender,
                new SelectList(Enum.GetValues(typeof(CarRental.Ennum.CustomerGender))),
                        "Select Gender",
                        new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-warning small" })
        </div>

        <div class="mb-2">
            @Html.LabelFor(m => m.Address, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-warning small" })
        </div>

        <div class="mb-2">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-warning small" })
        </div>

        <div class="mb-2">
            @Html.LabelFor(m => m.UserEmail, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.UserEmail, "", new { @class = "text-warning small" })
        </div>

        <div class="mb-2">
            @Html.LabelFor(m => m.LicenseNumber, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.LicenseNumber, new { @class = "form-control", placeholder = "License Number" })
            @Html.ValidationMessageFor(m => m.LicenseNumber, "", new { @class = "text-warning small" })
        </div>

        <button type="submit" class="btn btn-glass">Register</button>

        @* <p class="small mt-3">
            Already have an account? <a asp-controller="Login" asp-action="Index">Login</a>
        </p> *@
                }
    </div>
</body>
</html>
