@model IEnumerable<CarRental.Models.Booking>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Booking List";
}

<div class="container mt-4">
    <h2 class="mb-3">Bookings</h2>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Add Booking
    </a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Customer</th>
                <th>Car</th>
                <th>Pickup Date</th>
                <th>Return Date</th>
                <th>Total Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.Customer?.FullName</td>
                        <td>@booking.Car?.CarName (@booking.Car.CarModel)</td>
                        <td>@booking.PickupDate.ToShortDateString()</td>
                        <td>@booking.ReturnDate.ToShortDateString()</td>
                        <td>@booking.TotalCost.ToString("C")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No bookings found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
