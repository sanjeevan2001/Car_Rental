@using CarRental
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Phoenix</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- AOS CSS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #f5f7fa;
            color: #1b1b1b;
            margin: 0;
        }

        /* Navbar */
        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
        }

        .navbar .btn-primary {
            background: #0040c0;
            border: none;
        }

            .navbar .btn-primary:hover {
                background: #003366;
            }

        /* Footer */
        footer {
            background: #0d1b33;
            color: #fff;
            padding: 60px 0;
        }

            footer a {
                color: #b0c4de;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }

        /* Responsive Fix */
        @@media (max-width: 768px) {
            .navbar-brand

        {
            font-size: 1.2rem;
        }

        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand text-primary" asp-area="" asp-controller="Guest" asp-action="GuestView">Phoenix</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="GuestView">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="About">About</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="Contact">Contact</a></li>
                </ul>
                <div class="d-flex">
                    <a asp-area="" asp-controller="Login" asp-action="Index" class="btn btn-outline-primary me-2">Login</a>
                    <a asp-area="" asp-controller="Customer" asp-action="UserRegister" class="btn btn-primary">Register</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4 text-center text-md-start">
                    <h5 class="fw-bold">Phoenix</h5>
                    <p class="small">Your trusted partner for easy and affordable car rentals. Explore, book, and drive with confidence anywhere, anytime.</p>
                </div>
                <div class="col-md-4 text-center text-md-start">
                    <h5 class="fw-bold">Quick Links</h5>
                    <ul class="list-unstyled small">
                        <li><a asp-area="" asp-controller="Guest" asp-action="GuestView">Home</a></li>
                        <li><a asp-area="" asp-controller="Guest" asp-action="About">About</a></li>
                        <li><a asp-area="" asp-controller="Guest" asp-action="Contact">Contact</a></li>
                        <li><a asp-area="" asp-controller="Customer" asp-action="CustomerRegister">Register</a></li>
                    </ul>
                </div>
                <div class="col-md-4 text-center text-md-start">
                    <h5 class="fw-bold">Contact</h5>
                    <p class="small mb-1"><strong>Email:</strong> support@phoenix.com</p>
                    <p class="small mb-1"><strong>Phone:</strong> +1 (800) 123-4567</p>
                </div>
            </div>

            <hr class="my-4" style="border-color: rgba(255,255,255,0.2);">
            <div class="text-center small">&copy; 2025 Phoenix. All rights reserved.</div>
        </div>
    </footer>

    <!-- Bootstrap JS + AOS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ once: true });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
