@model CarRental.Models.Car
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Car Details";
}

<div class="container py-5">
    <h2 class="text-center fw-bold mb-5 text-info">
        <i class="bi bi-car-front me-2"></i> Car Details
    </h2>

    <div class="card glass-card shadow-lg mx-auto" style="max-width: 800px;">
        <div class="row g-0">
            <div class="col-md-5">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="Car Image">
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center bg-light h-100 rounded-start">
                        <span class="text-muted">No Image</span>
                    </div>
                }
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h4 class="card-title fw-bold mb-3">@Model.CarName</h4>
                    <p class="card-text"><strong>Model:</strong> @Model.CarModel</p>
                    <p class="card-text"><strong>Brand:</strong> @Model.CarBrand</p>
                    <p class="card-text"><strong>Seats:</strong> @Model.Seats</p>
                    <p class="card-text"><strong>Fuel Type:</strong> @Model.FuelType</p>
                    <p class="card-text"><strong>Price Per Day:</strong> Rs. @Model.PricePerday</p>
                    <p class="card-text"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>

                    <div class="mt-3 d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.CarId" class="btn btn-primary btn-hover">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-hover">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Glass card style */
    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

