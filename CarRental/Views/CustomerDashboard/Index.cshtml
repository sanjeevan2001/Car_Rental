@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container my-5">
    <h1 class="mb-5 text-gradient text-center animate-slide-fade">
        Welcome, @ViewBag.CustomerName!
    </h1>

    <div class="row g-4">
        <!-- Available Cars -->
        <div class="col-md-4 animate-slide-fade" style="animation-delay: 0.1s;">
            <div class="dashboard-card p-4 shadow-lg h-100 text-center">
                <div class="icon-circle mb-3 bg-gradient">
                    <i class="bi bi-car-front-fill text-white fs-2"></i>
                </div>
                <h5 class="fw-bold mb-2">Available Cars</h5>
                <p class="text-muted mb-3">Browse all cars currently available for booking.</p>
                <a asp-action="AvailableCars" class="btn btn-gradient w-100 fw-bold">View Cars</a>
            </div>
        </div>

        <!-- My Bookings -->
        <div class="col-md-4 animate-slide-fade" style="animation-delay: 0.3s;">
            <div class="dashboard-card p-4 shadow-lg h-100 text-center">
                <div class="icon-circle mb-3 bg-gradient">
                    <i class="bi bi-calendar-check-fill text-white fs-2"></i>
                </div>
                <h5 class="fw-bold mb-2">My Bookings</h5>
                <p class="text-muted mb-3">Check your booking history and upcoming trips.</p>
                <a asp-action="MyBookings" class="btn btn-gradient w-100 fw-bold">View Bookings</a>
            </div>
        </div>

        <!-- Profile -->
        <div class="col-md-4 animate-slide-fade" style="animation-delay: 0.5s;">
            <div class="dashboard-card p-4 shadow-lg h-100 text-center">
                <div class="icon-circle mb-3 bg-gradient">
                    <i class="bi bi-person-fill text-white fs-2"></i>
                </div>
                <h5 class="fw-bold mb-2">My Profile</h5>
                <p class="text-muted mb-3">View and update your personal information.</p>
                <a asp-controller="Profile" asp-action="Index" class="btn btn-gradient w-100 fw-bold">View Profile</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Gradient text for heading */
    .text-gradient {
        background: linear-gradient(90deg, #007bff, #00c6ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Slide fade animation */
    @@keyframes slideFadeIn {
        0% { opacity: 0; transform: translateY(25px); }
        100% { opacity: 1; transform: translateY(0); }
    }
    .animate-slide-fade {
        opacity: 0;
        animation: slideFadeIn 0.9s ease forwards;
    }

    /* Dashboard card styling - glassmorphism */
    .dashboard-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.25);
        border-radius: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    /* Gradient button */
    .btn-gradient {
        background: linear-gradient(90deg, #007bff, #00c6ff);
        border: none;
        color: #fff;
        border-radius: 12px;
        transition: 0.3s ease;
    }
    .btn-gradient:hover {
        background: linear-gradient(90deg, #0056b3, #0096c7);
        transform: translateY(-2px);
    }

    /* Icon circle */
    .icon-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        transition: transform 0.3s ease;
    }
    .icon-circle:hover {
        transform: scale(1.1);
    }

    h5 {
        font-weight: 700;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    p.text-muted {
        font-size: 0.95rem;
    }
</style>
