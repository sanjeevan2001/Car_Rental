<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRental</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">CarRental</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <!-- Left side menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>

                    <!-- Right side buttons -->
                    <div class="d-flex">
                        <a asp-area="" asp-controller="Login" asp-action="Index" class="btn btn-outline-primary me-2">Login</a>
                        <a asp-area="" asp-controller="Customer" asp-action="CustomerRegister" class="btn btn-primary">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light pt-5 pb-4 mt-5 border-top border-secondary">
        <div class="container">
            <div class="row gy-4">

                <!-- Company Overview -->
                <div class="col-lg-4 col-md-6 text-center text-md-start">
                    <h5 class="text-uppercase fw-bold mb-3">CarRental Admin</h5>
                    <p class="small text-muted">
                        Efficiently manage your rental fleet, customer bookings, user accounts, and system settings — all in one place.
                        Built with modern technology for car rental businesses that demand performance and reliability.
                    </p>
                </div>

                <!-- Navigation Links -->
                <div class="col-lg-4 col-md-6 text-center text-md-start">
                    <h5 class="text-uppercase fw-bold mb-3">Quick Access</h5>
                    <ul class="list-unstyled small">
                        <li class="mb-2">
                            <a href="/dashboard" class="text-light text-decoration-none d-inline-block">
                                <i class="bi bi-speedometer2 me-2"></i>Dashboard Overview
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/vehicles" class="text-light text-decoration-none d-inline-block">
                                <i class="bi bi-truck-front me-2"></i>Vehicle Management
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/bookings" class="text-light text-decoration-none d-inline-block">
                                <i class="bi bi-calendar-check me-2"></i>Booking Records
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/users" class="text-light text-decoration-none d-inline-block">
                                <i class="bi bi-people me-2"></i>User Accounts
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/settings" class="text-light text-decoration-none d-inline-block">
                                <i class="bi bi-gear me-2"></i>System Configuration
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Contact or Support Info -->
                <div class="col-lg-4 col-md-12 text-center text-md-start">
                    <h5 class="text-uppercase fw-bold mb-3">Support & Info</h5>
                    <p class="small text-muted mb-1"><strong>Email:</strong> support@carrentaladmin.com</p>
                    <p class="small text-muted mb-1"><strong>Phone:</strong> +1 (800) 123-4567</p>
                    <p class="small text-muted mb-1"><strong>Version:</strong> 2.3.1 (Updated Sep 2025)</p>
                    <p class="small text-muted mb-0"><strong>Built with:</strong> ASP.NET Core & Bootstrap 5</p>
                </div>

            </div>

            <hr class="my-4 border-secondary">

            <!-- Bottom Bar -->
            <div class="row">
                <div class="col text-center small text-muted">
                    &copy; 2025 CarRental Admin Panel. All rights reserved. |
                    <a href="/privacy" class="text-light text-decoration-none">Privacy Policy</a> |
                    <a href="/terms" class="text-light text-decoration-none">Terms of Use</a>
                </div>
            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
