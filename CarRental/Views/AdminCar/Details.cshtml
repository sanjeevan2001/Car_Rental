@model CarRental.Models.Car
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Car Details";
}

<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="text-center fw-bold mb-5 text-info animate__animated animate__fadeInDown">
        <i class="bi bi-car-front me-2"></i> Car Details
    </h2>

    <div class="card glass-card shadow-lg mx-auto animate__animated animate__fadeInUp" style="max-width: 800px;">
        <div class="row g-0">
            <!-- Car Image -->
            <div class="col-md-5">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start car-image" alt="Car Image">
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center bg-light h-100 rounded-start">
                        <span class="text-muted">No Image</span>
                    </div>
                }
            </div>

            <!-- Car Info -->
            <div class="col-md-7">
                <div class="card-body">
                    <h4 class="card-title fw-bold text-light mb-3">@Model.CarName</h4>
                    <p class="card-text text-light"><strong>Model:</strong> @Model.CarModel</p>
                    <p class="card-text text-light"><strong>Brand:</strong> @Model.CarBrand</p>
                    <p class="card-text text-light"><strong>Seats:</strong> @Model.Seats</p>
                    <p class="card-text text-light"><strong>Fuel Type:</strong> @Model.FuelType</p>
                    <p class="card-text text-light"><strong>Price Per Day:</strong> Rs. @Model.PricePerday</p>
                    <p class="card-text text-light"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>

                    <div class="mt-4 d-flex gap-3">
                        <a asp-action="Edit" asp-route-id="@Model.CarId" class="btn btn-primary btn-hover px-4">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-hover px-4">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Glass Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.3);
        }

    /* Text */
    .text-light {
        color: #f0f0f0 !important;
    }

    /* Buttons */
    .btn-hover {
        transition: all 0.3s ease-in-out;
        border-radius: 8px;
    }

        .btn-hover:hover {
            transform: scale(1.07);
            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        }

    /* Car Image */
    .car-image {
        width: 100%;
        height: auto;
        border-radius: 0.75rem;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .car-image:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        }

    /* Responsive */
    @@media(max - width: 576px)

    {
        .glass-card

    {
        padding: 20px;
    }

    .btn-hover {
        padding: 8px 16px;
        font-size: 0.9rem;
    }

    }
</style>
