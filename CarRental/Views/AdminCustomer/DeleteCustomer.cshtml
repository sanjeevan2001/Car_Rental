@model CarRental.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Container -->
<div class="container py-5">

    <!-- Page Title -->
    <h2 class="text-center text-danger fw-bold mb-5 animate__animated animate__fadeInDown">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Customer
    </h2>

    <!-- Warning Alert -->
    <div class="alert alert-warning shadow-sm text-center animate__animated animate__fadeIn">
        <i class="bi bi-exclamation-circle-fill me-2"></i>
        Are you sure you want to delete this customer? This action cannot be undone.
    </div>

    <!-- Customer Details Card -->
    <div class="card glass-card shadow-lg mb-4 animate__animated animate__zoomIn">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">@Model.FullName</h4>
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> @Model.UserEmail</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            <p><strong>Username:</strong> @(Model.User?.UserName ?? "N/A")</p>
            <p><strong>License Number:</strong> @Model.LicenseNumber</p>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-center gap-3 animate__animated animate__fadeInUp">
        <form asp-action="DeleteCustomer" method="post">
            <input type="hidden" asp-for="CustomerId" />
            <button type="submit" class="btn btn-danger btn-hover px-4 py-2">
                <i class="bi bi-trash me-1"></i> Yes, Delete
            </button>
        </form>
        <a asp-action="CustomerList" class="btn btn-secondary btn-hover px-4 py-2">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </div>

</div>

<!-- Custom Styles -->
<style>
    /* Glassmorphism Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border: 1px solid rgba(255,255,255,0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.3);
        }

    /* Button Hover */
    .btn-hover {
        transition: all 0.3s ease;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.25);
        }

    /* Alert Icon Alignment */
    .alert-warning i {
        vertical-align: middle;
    }

    /* Responsive tweaks */
    @@media (max-width: 576px) {
        .btn-hover

    {
        width: 100%;
    }

    .d-flex.justify-content-center {
        flex-direction: column;
        gap: 1rem !important;
    }

    }
</style>

<!-- Animate.css CDN for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
