@model CarRental.Models.Car
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Car";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-danger">
        <i class="bi bi-trash3-fill me-2"></i> Delete Car
    </h2>

    <div class="alert alert-warning rounded-3 shadow-sm">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Are you sure you want to delete this car? This action cannot be undone.
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <h4>@Model.CarName</h4>
            <p><strong>Model:</strong> @Model.CarModel</p>
            <p><strong>Brand:</strong> @Model.CarBrand</p>
            <p><strong>Price Per Day:</strong> Rs. @Model.PricePerday</p>
            <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Car Image" width="200" class="rounded shadow-sm mb-3" />
            }

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="CarId" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash3-fill me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
