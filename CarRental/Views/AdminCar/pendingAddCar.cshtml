@model CarRental.ViewModels.CarViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <!-- Page Title -->
    <h2 class="fw-bold text-dark mb-4">
        <i class="bi bi-plus-circle-fill text-success me-2"></i> Add New Car
    </h2>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white fw-bold fs-5">
            Enter Car Details
        </div>
        <div class="card-body p-4">
            <form asp-action="AddCar" method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- Car Name -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="CarName" class="form-label fw-bold">Car Name</label>
                        <input type="text" asp-for="CarName" class="form-control" placeholder="e.g. Toyota Corolla" />
                        <span asp-validation-for="CarName" class="text-danger"></span>
                    </div>

                    <!-- Car Model -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="CarModel" class="form-label fw-bold">Car Model</label>
                        <input type="text" asp-for="CarModel" class="form-control" placeholder="e.g. 2022" />
                        <span asp-validation-for="CarModel" class="text-danger"></span>
                    </div>

                    <!-- Car Brand -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="CarBrand" class="form-label fw-bold">Car Brand</label>
                        <input type="text" asp-for="CarBrand" class="form-control" placeholder="e.g. Toyota" />
                        <span asp-validation-for="CarBrand" class="text-danger"></span>
                    </div>

                    <!-- Seats -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Seats" class="form-label fw-bold">Number of Seats</label>
                        <input type="text" asp-for="Seats" class="form-control" placeholder="e.g. 5" />
                        <span asp-validation-for="Seats" class="text-danger"></span>
                    </div>

                    <!-- Fuel Type -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="FuelType" class="form-label fw-bold">Fuel Type</label>
                        <input type="text" asp-for="FuelType" class="form-control" placeholder="e.g. Petrol / Diesel" />
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="PricePerday" class="form-label fw-bold">Price Per Day ($)</label>
                        <input asp-for="PricePerday" class="form-control" type="number" placeholder="e.g. 50" />
                        <span asp-validation-for="PricePerday" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="ImageFile" class="form-label fw-bold">Car Image</label>
                        <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>



                    @* <!-- Availability Switch -->
                    <div class="col-md-12 mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsAvailable" class="form-check-input" id="isAvailableSwitch" />
                            <label class="form-check-label fw-bold" for="isAvailableSwitch">
                                Available for Rent
                            </label>
                        </div>
                    </div> *@
                </div>

                <!-- Action Buttons -->
                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-save2 me-1"></i> Save Car
                    </button>
                    <a asp-controller="AdminCar" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}