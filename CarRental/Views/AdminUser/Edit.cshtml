@model CarRental.Models.User
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit User";
}

<div class="container my-5 d-flex justify-content-center">

    <div class="card glass-card shadow-lg p-5 animate__animated animate__zoomIn" style="max-width: 500px; width: 100%;">
        <h2 class="text-primary mb-4 text-center animate__animated animate__fadeInDown">
            <i class="bi bi-pencil-square me-2"></i> Edit User
        </h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserId" />

            <div class="mb-4">
                <label asp-for="UserName" class="form-label fw-semibold"></label>
                <input asp-for="UserName" class="form-control form-input" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control form-input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between flex-wrap gap-3 mt-3">
                <button type="submit" class="btn btn-success btn-hover flex-fill py-2">
                    <i class="bi bi-check-circle me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-hover flex-fill py-2">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Glassmorphism Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(15px);
        border-radius: 1.25rem;
        border: 1px solid rgba(255,255,255,0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.25);
        }

    /* Input Focus */
    .form-input:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 12px rgba(13,110,253,0.5);
        transition: all 0.3s ease;
    }

    /* Button Hover */
    .btn-hover {
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.2);
        }

    /* Headings */
    h2 {
        font-weight: 700;
    }

    .form-label {
        font-weight: 600;
    }

    /* Fade-in animation for container */
    @@keyframes fadeSlideUp {
        0% {
            opacity: 0;
            transform: translateY(25px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-slide {
        opacity: 0;
        animation: fadeSlideUp 0.8s forwards;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .d-flex.justify-content-between {
            flex-direction: column;
        }

        .btn-hover {
            width: 100%;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
