@model CarRental.ViewModels.CarViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Car";
}

<div class="container py-5">
    <!-- Page Title -->
    <h2 class="text-center fw-bold mb-4 text-success">
        <i class="bi bi-plus-circle-fill me-2"></i> Add New Car
    </h2>

    <div class="card glass-card shadow-lg border-0">
        <div class="card-header bg-success text-white fw-bold fs-5">
            Enter Car Details
        </div>
        <div class="card-body p-4">
            <form asp-action="AddCar" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CarName" class="form-label fw-bold text-dark">Car Name</label>
                        <input asp-for="CarName" class="form-control" placeholder="e.g. Toyota Corolla" />
                        <span asp-validation-for="CarName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CarModel" class="form-label fw-bold text-dark">Car Model</label>
                        <input asp-for="CarModel" class="form-control" placeholder="e.g. 2022" />
                        <span asp-validation-for="CarModel" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CarBrand" class="form-label fw-bold text-dark">Car Brand</label>
                        <input asp-for="CarBrand" class="form-control" placeholder="e.g. Toyota" />
                        <span asp-validation-for="CarBrand" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Seats" class="form-label fw-bold text-dark">Seats</label>
                        <input asp-for="Seats" type="number" class="form-control" placeholder="e.g. 5" />
                        <span asp-validation-for="Seats" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FuelType" class="form-label fw-bold text-dark">Fuel Type</label>
                        <input asp-for="FuelType" class="form-control" placeholder="e.g. Petrol / Diesel" />
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PricePerday" class="form-label fw-bold text-dark">Price Per Day ($)</label>
                        <input asp-for="PricePerday" type="number" step="0.01" class="form-control" placeholder="e.g. 50" />
                        <span asp-validation-for="PricePerday" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="ImageFile" class="form-label fw-bold text-dark">Car Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg btn-hover">
                        <i class="bi bi-save2 me-1"></i> Save Car
                    </button>
                    <a asp-controller="AdminCar" asp-action="Index" class="btn btn-outline-secondary btn-lg btn-hover">
                        <i class="bi bi-arrow-left me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Glass card */
    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: #212529; /* Ensures all text is visible */
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.25);
        }

    /* Inputs focus */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 8px rgba(40, 167, 69, 0.4);
    }

    /* Buttons hover */
    .btn-hover {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.2);
        }

    /* Labels */
    .form-label {
        color: #212529 !important; /* Dark and visible label text */
    }

    /* Responsive adjustments */
    @@media(max - width: 576px)

    {
        .btn-lg

    {
        width: 48%;
        font-size: 0.9rem;
    }

    }
</style>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
