@model CarRental.Models.Booking

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Booking";
}

<div class="container mt-4">
    <h2>Create Booking</h2>

    <form asp-action="Create" method="post" class="card p-3 shadow-sm">

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="CustomerId" class="form-label">Customer</label>
            <select asp-for="CustomerId" asp-items="ViewBag.CustomerId" class="form-select"></select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CarId" class="form-label">Car</label>
            <select asp-for="CarId" asp-items="ViewBag.CarId" class="form-select"></select>
            <span asp-validation-for="CarId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PickupDate" class="form-label"></label>
            <input asp-for="PickupDate" class="form-control" type="date" />
            <span asp-validation-for="PickupDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ReturnDate" class="form-label"></label>
            <input asp-for="ReturnDate" class="form-control" type="date" />
            <span asp-validation-for="ReturnDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
