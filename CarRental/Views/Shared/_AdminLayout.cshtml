@*
    Phoenix Admin Layout for CarRental Admin Panel
    Path: /Areas/Admin/Views/Shared/_AdminLayout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Phoenix | CarRental</title>

    <!-- Favicon / Logo -->
    <link rel="icon" href="~/images/Extra/Pheonix.jpg" type="image/png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        :root {
            --phoenix-dark: #0a0a23;
            --phoenix-primary: #ff6f61;
            --phoenix-secondary: #f5a623;
            --phoenix-bg: #121228;
            --phoenix-card: rgba(20, 20, 45, 0.85);
            --phoenix-gradient: linear-gradient(135deg, #ff6f61, #f5a623);
        }

        body {
            font-family: "Segoe UI", sans-serif;
            background: var(--phoenix-bg);
            color: #fff;
        }

        .navbar {
            background: var(--phoenix-dark);
            box-shadow: 0 2px 12px rgba(0,0,0,0.5);
        }

        .navbar-brand {
            color: var(--phoenix-primary) !important;
            font-size: 1.3rem;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 35px;
                margin-right: 10px;
            }

        .navbar-nav .nav-link {
            color: #ccc !important;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link.active,
            .navbar-nav .nav-link:hover {
                color: var(--phoenix-primary) !important;
                font-weight: 600;
            }


/* pending */
        .tokkeler-navbar {
            background-color: #0f172a;
        }

            .tokkeler-navbar .nav-link {
                color: #f8fafc;
            }

                .tokkeler-navbar .nav-link.active {
                    color: #0ea5e9;
                    font-weight: bold;
                }

            .tokkeler-navbar .navbar-brand {
                color: #ffffff;
            }

        /* Content container */

        .content-wrapper {
            min-height: 80vh;
            padding: 2rem 0;
        }

        main {
            background: var(--phoenix-card);
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 8px 20px rgba(0,0,0,0.6);
        }

        h4, h5 {
            color: #fff;
        }

        footer {
            background: var(--phoenix-dark);
            color: #ccc;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

            footer a {
                color: var(--phoenix-primary);
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--phoenix-gradient);
            opacity: 0.05;
            z-index: -1;
        }

        .animate-card {
            animation: fadeInUp 1s ease forwards;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(25px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <header>

        <nav class="navbar navbar-expand-lg sticky-top tokkeler-navbar">

            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="AdminDashboard" asp-action="Index">
                    <img src="~/images/Extra/Pheonix.jpg" alt="Phoenix Logo" /> Phoenix Admin
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#phoenixNavbar" aria-controls="phoenixNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="phoenixNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "DashBoard" ? "active" : "")"
                               asp-area="" asp-controller="AdminDashboard" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "CustomerList" ? "active" : "")"
                               asp-area="" asp-controller="AdminCustomer" asp-action="CustomerList">
                                <i class="bi bi-people-fill me-1"></i> Customer List
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "AddCustomer" ? "active" : "")"
                               asp-area="" asp-controller="Customer" asp-action="CustomerRegister">
                                <i class="bi bi-person-plus-fill me-1"></i> Add Customer
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Cars" ? "active" : "")"
                               asp-area="" asp-controller="AdminCar" asp-action="Index">
                                <i class="bi bi-car-front-fill me-1"></i> Cars
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Bookings" ? "active" : "")"
                               asp-area="" asp-controller="AdminBooking" asp-action="Index">
                                <i class="bi bi-calendar-check me-1"></i> Bookings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Users" ? "active" : "")"
                               asp-area="" asp-controller="AdminUser" asp-action="Index">
                                <i class="bi bi-people-fill me-1"></i> Users
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-semibold" asp-area="" asp-controller="Login" asp-action="Index">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page Content -->
    <div class="container content-wrapper">
        <h4 class="mb-3 border-bottom pb-2">@ViewData["Title"]</h4>
        <main role="main" class="animate-card">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="pt-5 pb-4 mt-5">
        <div class="container">
            <div class="row gy-4 justify-content-between align-items-start">
                <div class="col-lg-6 col-md-12">
                    <h5 class="fw-bold mb-3">Phoenix Admin</h5>
                    <p class="small text-muted">
                        Manage your fleet, bookings, customers, and system settings efficiently.
                    </p>
                </div>
                <div class="col-lg-5 col-md-12">
                    <h5 class="fw-bold mb-3">Support & Info</h5>
                    <p class="small text-muted mb-2"><i class="bi bi-envelope-fill me-2"></i>Email: support@phoenix.com</p>
                    <p class="small text-muted mb-2"><i class="bi bi-telephone-fill me-2"></i>Phone: +1 (800) 123-4567</p>
                </div>
            </div>

            <hr class="my-4 border-secondary">

            <div class="row">
                <div class="col text-center small text-muted">
                    &copy; 2025 Phoenix Admin Panel. All rights reserved. |
                    <a href="/privacy">Privacy Policy</a> |
                    <a href="/terms">Terms of Use</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ltrjvnR4/Jps0QG7s7qS4nIepnB3yPpcURrjCqT9V4GgS9gEt3URy9Bv1WTRi" crossorigin="anonymous">
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
