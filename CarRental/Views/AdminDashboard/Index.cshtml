@{
    // Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // ViewData["Title"] = "Admin Dashboard...";
}


<h2 class="mb-4 fw-bold text-primary border-bottom pb-2">
    <i class="bi bi-person-plus-fill me-2"></i> 📊 Admin Dashboard
</h2>

<div class="container-fluid mt-4">



    <div class="row g-4">

        <!-- Total Cars -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 bg-primary text-white h-100">
                <div class="card-body text-center">
                    <i class="bi bi-car-front display-4 mb-3"></i>
                    <h5 class="card-title">Total Cars</h5>
                    <h3 class="fw-bold">@ViewBag.TotalCars</h3>
                </div>
            </div>
        </div>

        <!-- Total Customers -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 bg-success text-white h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 mb-3"></i>
                    <h5 class="card-title">Total Customers</h5>
                    <h3 class="fw-bold">@ViewBag.TotalCustomers</h3>
                </div>
            </div>
        </div>

        <!-- Active Rentals -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 bg-warning text-dark h-100">
                <div class="card-body text-center">
                    <i class="bi bi-key-fill display-4 mb-3"></i>
                    <h5 class="card-title">Active Rentals</h5>
                    <h3 class="fw-bold">@ViewBag.ActiveRentals</h3>
                </div>
            </div>
        </div>

        <!-- Earnings -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 bg-danger text-white h-100">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar display-4 mb-3"></i>
                    <h5 class="card-title">Total Earnings</h5>
                    <h3 class="fw-bold">$@ViewBag.TotalEarnings</h3>
                </div>
            </div>
        </div>

    </div>
</div>





