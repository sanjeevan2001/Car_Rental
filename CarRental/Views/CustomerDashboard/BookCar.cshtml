@model CarRental.Models.Car
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Book Car";
}

<h2>Book @Model.CarName (@Model.CarModel)</h2>

<form asp-action="BookCar" method="post">
    <input type="hidden" asp-for="CarId" value="@Model.CarId" />

    <div class="form-group mb-3">
        <label>Pickup Date</label>
        <input type="date" name="pickupDate" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Return Date</label>
        <input type="date" name="returnDate" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Confirm Booking</button>
    <a asp-action="AvailableCars" class="btn btn-secondary">Cancel</a>
</form>
