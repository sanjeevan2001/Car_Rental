@model CarRental.ViewModel.UserCustomer

<h2 class="title">Customer Registration</h2>

<div class="registration-card">
    <form method="post" novalidate>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" type="password" />
            <span asp-validation-for="ConfirmPassword" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" />
            <span asp-validation-for="FullName" class="error"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Gender)
            @Html.DropDownListFor(m => m.Gender,
                     new SelectList(Enum.GetValues(typeof(CarRental.Ennum.CustomerGender))),
                     "Select Gender",
                     new { @class = "dropdown" })
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "error" })
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" />
            <span asp-validation-for="Address" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserEmail"></label>
            <input asp-for="UserEmail" />
            <span asp-validation-for="UserEmail" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="LicenseNumber"></label>
            <input asp-for="LicenseNumber" />
            <span asp-validation-for="LicenseNumber" class="error"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="themed-btn">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Background */
    body {
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #021B2F, #0B385A);
        font-family: "Segoe UI", system-ui, sans-serif;
        color: #fff;
        line-height: 1.5;
    }

    /* Title */
    .title {
        text-align: center;
        margin: 40px 0 20px;
        font-size: 30px;
        font-weight: 700;
        background: linear-gradient(90deg, #90E6FF, #01C8BC);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Card */
    .registration-card {
        background: #fff;
        color: #021B2F;
        max-width: 650px;
        margin: 0 auto 50px;
        padding: 35px 40px;
        border-radius: 12px;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
        border-top: 6px solid #01C8BC;
    }

    /* Form Group */
    .form-group {
        margin-bottom: 18px;
        display: flex;
        flex-direction: column;
    }

    label {
        margin-bottom: 6px;
        font-size: 14px;
        font-weight: 600;
        color: #0B385A;
    }

    input,
    .dropdown {
        padding: 12px 14px;
        border: 1.8px solid #dbeafe;
        border-radius: 8px;
        font-size: 15px;
        background: #f9fbfd;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        input:focus,
        .dropdown:focus {
            border-color: #01C8BC;
            background: #fff;
            outline: none;
            box-shadow: 0 0 8px rgba(144, 230, 255, 0.6);
        }

    /* Button */
    .themed-btn {
        background: linear-gradient(90deg, #01C8BC, #2DBAE1);
        border: none;
        color: white;
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.3s ease;
    }

        .themed-btn:hover {
            transform: translateY(-2px);
            background: linear-gradient(90deg, #0B385A, #01C8BC);
            box-shadow: 0 4px 14px rgba(0, 0, 0, 0.25);
        }

    /* Validation error */
    .error {
        font-size: 13px;
        color: #d93025;
        margin-top: 4px;
    }
</style>
