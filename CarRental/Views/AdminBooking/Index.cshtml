@model IEnumerable<CarRental.ViewModels.BookingViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Bookings";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary d-flex align-items-center">
            <i class="bi bi-journal-check me-2"></i> Bookings
        </h2>
        <a asp-action="Create" class="btn btn-success btn-lg action-btn">
            <i class="bi bi-plus-circle me-1"></i> Add Booking
        </a>
    </div>

    <!-- Bookings Table -->
    <div class="card shadow-lg border-0 rounded-4 booking-card">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Customer</th>
                            <th>Car</th>
                            <th>Pickup Date</th>
                            <th>Return Date</th>
                            <th>Total Cost</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var booking in Model)
                            {
                                <tr class="table-row-hover">
                                    <td>@booking.CustomerName</td>
                                    <td>@booking.CarName</td>
                                    <td>@booking.PickupDate:yyyy-MM-dd</td>
                                    <td>@booking.ReturnDate:yyyy-MM-dd</td>
                                    <td class="fw-bold text-success">@booking.TotalCost:C</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@booking.BookingId"
                                           class="btn btn-primary btn-sm me-1 action-btn">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@booking.BookingId"
                                           class="btn btn-danger btn-sm action-btn">
                                            <i class="bi bi-trash3-fill"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="text-muted fst-italic">
                                        <i class="bi bi-info-circle me-2"></i> No bookings available.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card Animation */
    .booking-card {
        animation: fadeInUp 0.7s ease-in-out;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .booking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    /* Row Hover */
    .table-row-hover:hover {
        background-color: #f1f7ff;
        transition: background-color 0.3s ease;
    }

    /* Buttons */
    .action-btn {
        transition: all 0.3s ease-in-out;
        border-radius: 8px;
    }

        .action-btn:hover {
            transform: scale(1.08);
        }

    /* Fade In Animation */
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(25px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
