@model CarRental.ViewModels.AdminDashboardViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-speedometer2"></i> Admin Dashboard
        </h2>
        <span class="badge bg-secondary fs-6 shadow-sm">Welcome, Admin</span>
    </div>

    <!-- Statistic Cards -->
    <div class="row g-4">
        <!-- Total Cars -->
        <div class="col-md-3">
            <div class="card stat-card shadow-lg border-0 h-100">
                <div class="card-body text-center bg-primary text-white rounded-4">
                    <i class="bi bi-car-front-fill fs-1 mb-2"></i>
                    <h6 class="card-title text-uppercase fw-bold">Total Cars</h6>
                    <p class="fs-2 fw-bolder mb-0">@Model.TotalCars</p>
                </div>
            </div>
        </div>

        <!-- Available Cars -->
        <div class="col-md-3">
            <div class="card stat-card shadow-lg border-0 h-100">
                <div class="card-body text-center bg-success text-white rounded-4">
                    <i class="bi bi-check-circle-fill fs-1 mb-2"></i>
                    <h6 class="card-title text-uppercase fw-bold">Available Cars</h6>
                    <p class="fs-2 fw-bolder mb-0">@Model.AvailableCars</p>
                </div>
            </div>
        </div>

        <!-- Total Bookings -->
        <div class="col-md-3">
            <div class="card stat-card shadow-lg border-0 h-100">
                <div class="card-body text-center bg-warning text-dark rounded-4">
                    <i class="bi bi-calendar2-check-fill fs-1 mb-2"></i>
                    <h6 class="card-title text-uppercase fw-bold">Total Bookings</h6>
                    <p class="fs-2 fw-bolder mb-0">@Model.TotalBookings</p>
                </div>
            </div>
        </div>

        <!-- Total Customers -->
        <div class="col-md-3">
            <div class="card stat-card shadow-lg border-0 h-100">
                <div class="card-body text-center bg-danger text-white rounded-4">
                    <i class="bi bi-people-fill fs-1 mb-2"></i>
                    <h6 class="card-title text-uppercase fw-bold">Total Customers</h6>
                    <p class="fs-2 fw-bolder mb-0">@Model.TotalCustomers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom CSS -->
    <style>
        .stat-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px) scale(1.03);
                box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            }

            .stat-card .card-body {
                padding: 2rem 1rem;
            }

            .stat-card i {
                transition: transform 0.3s ease;
            }

            .stat-card:hover i {
                transform: scale(1.2);
            }
    </style>


    <!-- Quick Links -->
    <div class="card shadow mt-5 border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-lightning-charge-fill"></i> Quick Links</h5>
        </div>
        <div class="card-body d-flex flex-wrap">
            <a asp-controller="AdminCar" asp-action="Index" class="btn btn-outline-primary m-2 px-4">
                <i class="bi bi-car-front"></i> Manage Cars
            </a>
            <a asp-controller="AdminBooking" asp-action="Create" class="btn btn-outline-warning m-2 px-4">
                <i class="bi bi-journal-check"></i> Manage Bookings
            </a>
            <a asp-controller="AdminCustomer" asp-action="CustomerList" class="btn btn-outline-success m-2 px-4">
                <i class="bi bi-person-badge"></i> Manage Customers
            </a>
            <a asp-controller="AdminUser" asp-action="Index" class="btn btn-outline-dark m-2 px-4">
                <i class="bi bi-shield-lock"></i> Manage Users
            </a>
        </div>
    </div>


