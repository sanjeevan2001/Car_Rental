@*
    Admin Layout for CarRental Admin Panel
    Path: /Areas/Admin/Views/Shared/_AdminLayout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin | CarRental</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <!-- Sticky Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-sm">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand fw-bold d-flex align-items-center text-warning"
                   asp-area="" asp-controller="AdminDashboard" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i> CarRental | Admin
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#adminNavbar" aria-controls="adminNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="adminNavbar">
                    <!-- Left Nav -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Dashboard" ? "active text-warning fw-bold" : "")"
                               asp-area="" asp-controller="AdminDashboard" asp-action="Index" aria-current="page">
                                <i class="bi bi-house-door me-1"></i> Dashboard
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Dashboard" ? "active text-warning fw-bold" : "")"
                               asp-area="" asp-controller="AdminCustomer" asp-action="CustomerList" aria-current="page">
                                <i class="bi bi-people-fill me-1"></i> CustomerList
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Dashboard" ? "active text-warning fw-bold" : "")"
                               asp-area="" asp-controller="AdminCustomer" asp-action="AddCustomer" aria-current="page">
                                <i class="bi bi-person-plus-fill me-1"></i> Add Customer
                            </a>
                        </li>






                        @* <!-- Users Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewData["Title"]?.ToString() == "Users" ? "active text-warning fw-bold" : "")"
                               href="#" id="usersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people-fill me-1"></i> Users
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="usersDropdown">
                                <li>
                                    <a class="dropdown-item @(ViewData["Title"]?.ToString() == "AdminDashboard" ? "active fw-bold text-warning" : "")"
                                       asp-area="" asp-controller="AdminCustomer" asp-action="AdminDashboard">
                                        <i class="bi bi-speedometer2 me-1"></i> Admin Dashboard
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(ViewData["Title"]?.ToString() == "CustomerList" ? "active fw-bold text-warning" : "")"
                                       asp-area="" asp-controller="AdminCustomer" asp-action="CustomerList">
                                        <i class="bi bi-people-fill me-1"></i> Customer List
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(ViewData["Title"]?.ToString() == "AddCustomer" ? "active fw-bold text-warning" : "")"
                                       asp-area="" asp-controller="AdminCustomer" asp-action="AddCustomer">
                                        <i class="bi bi-person-plus-fill me-1"></i> Add Customer
                                    </a>
                                </li>
                                


                            </ul>
                        </li> *@

                        <!-- Cars -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Cars" ? "active text-warning fw-bold" : "")"
                               asp-area="" asp-controller="AdminCar" asp-action="Index">
                                <i class="bi bi-car-front-fill me-1"></i> Cars
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Cars" ? "active text-warning fw-bold" : "")"
                               asp-area="" asp-controller="AdminCar" asp-action="AddCar">
                                <i class="bi bi-car-front-fill me-1"></i> AddCars
                            </a>
                        </li>

                        <!-- Bookings -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Bookings" ? "active text-warning fw-bold" : "")"
                               asp-area="" asp-controller="AdminBooking" asp-action="Index">
                                <i class="bi bi-calendar-check me-1"></i> Bookings
                            </a>
                        </li>
                    </ul>

                    <!-- Right Nav -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-semibold d-flex align-items-center"
                               asp-area="" asp-controller="Login" asp-action="Index">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Content -->
    <div class="container my-4">
        <h4 class="mb-3 text-muted border-bottom pb-2">@ViewData["Title"]</h4>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer -->
    <footer class="bg-dark text-light pt-5 pb-4 mt-5 border-top border-secondary">
        <div class="container">
            <div class="row gy-4 justify-content-between align-items-start">

                <!-- Company Overview -->
                <div class="col-lg-6 col-md-12">
                    <h5 class="text-uppercase fw-bold mb-3">CarRental Admin</h5>
                    <p class="small text-muted">
                        Efficiently manage your rental fleet, customer bookings, user accounts, and system settings â€” all in one place.
                        Built with modern technology for businesses that demand performance and reliability.
                    </p>
                </div>

                <!-- Contact or Support Info -->
                <div class="col-lg-5 col-md-12">
                    <h5 class="text-uppercase fw-bold mb-3">Support & Info</h5>
                    <p class="small text-muted mb-2"><i class="bi bi-envelope-fill me-2"></i><strong>Email:</strong> support@carrentaladmin.com</p>
                    <p class="small text-muted mb-2"><i class="bi bi-telephone-fill me-2"></i><strong>Phone:</strong> +1 (800) 123-4567</p>
                    <p class="small text-muted mb-2"><i class="bi bi-gear-fill me-2"></i><strong>Version:</strong> 2.3.1 (Sep 2025)</p>
                    <p class="small text-muted mb-0"><i class="bi bi-code-slash me-2"></i><strong>Built with:</strong> ASP.NET Core & Bootstrap 5</p>
                </div>

            </div>

            <hr class="my-4 border-secondary">

            <!-- Bottom Bar -->
            <div class="row">
                <div class="col text-center small text-muted">
                    &copy; 2025 CarRental Admin Panel. All rights reserved. |
                    <a href="/privacy" class="text-light text-decoration-none">Privacy Policy</a> |
                    <a href="/terms" class="text-light text-decoration-none">Terms of Use</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Extra Styling -->
    <style>
        footer h5 {
            letter-spacing: 1px;
        }

        footer a:hover {
            text-decoration: underline;
            color: #0dcaf0; /* Bootstrap cyan hover */
        }
    </style>




    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
