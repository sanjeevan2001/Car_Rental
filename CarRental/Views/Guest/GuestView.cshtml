@{
    ViewBag.Title = "Welcome to Car Rental";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

@section Styles {
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #f5f7fa;
            color: #1b1b1b;
            margin: 0;
        }

        /* Hero Section */
        .hero-section {
            position: relative;
            background: linear-gradient(rgba(0,31,63,0.5), rgba(0,31,63,0.5)), url("/images/Extra/Homepage.jpg") center/cover no-repeat;
            border-radius: 20px;
            padding: 120px 20px;
            color: #fff;
            text-align: center;
            overflow: hidden;
            margin-bottom: 60px;
        }

        .hero-section h1 {
            font-size: 3rem;
            font-weight: 800;
            text-shadow: 0 0 12px rgba(0,0,0,0.5);
        }

        .hero-section p {
            font-size: 1.3rem;
            margin-top: 20px;
            line-height: 1.6;
            text-shadow: 0 0 8px rgba(0,0,0,0.5);
        }

        .custom-btn {
            font-weight: 700;
            border-radius: 30px;
            padding: 12px 40px;
            font-size: 1rem;
            transition: all 0.3s ease-in-out;
        }

        .custom-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }

        /* Feature Cards */
        .feature-card {
            background: #fff;
            border-radius: 20px;
            padding: 30px 25px;
            box-shadow: 0 8px 25px rgba(0,0,64,0.15);
            text-align: center;
            transition: all 0.3s ease;
        }

        .feature-card h3 {
            font-weight: 700;
            margin-bottom: 15px;
        }

        .feature-card p {
            color: #495057;
            line-height: 1.6;
        }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0,0,128,0.2);
        }

        /* Booking Section */
        .booking-section {
            background: #001f3f;
            color: #fff;
            padding: 60px 20px;
            border-radius: 20px;
            text-align: center;
            margin-top: 50px;
        }

        .booking-section h2 {
            font-weight: 800;
            font-size: 2.2rem;
            margin-bottom: 15px;
        }

        .booking-section p {
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        .booking-section .custom-btn {
            background: #0040c0;
            color: #fff;
            border-radius: 12px;
            padding: 12px 35px;
            transition: all 0.3s ease;
        }

        .booking-section .custom-btn:hover {
            background: #003366;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,100,0.4);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .hero-section h1

        {
            font-size: 2rem;
        }

        .hero-section p {
            font-size: 1rem;
        }

        .booking-section h2 {
            font-size: 1.8rem;
        }

        .booking-section p {
            font-size: 1rem;
        }

        }
    </style>
}

<!-- Hero Section -->
<div class="hero-section" data-aos="fade-up" data-aos-duration="1200">
    <h1 data-aos="zoom-in" data-aos-delay="300">Welcome to Car Rental Service 🚗</h1>
    <p data-aos="fade-up" data-aos-delay="600">
        Book your ride anytime, anywhere. Affordable, fast, and reliable car rentals for all your journeys.
    </p>
    @* <a href="@Url.Action("Index", "Booking")" class="btn custom-btn mt-4" data-aos="fade-up" data-aos-delay="800">Book a Car</a> *@
</div>

<!-- Features Section -->
<div class="container mt-5">
    <div class="row g-4 text-center">
        <div class="col-md-4" data-aos="fade-right" data-aos-delay="200">
            <div class="feature-card h-100">
                <h3>Wide Selection</h3>
                <p>Choose from economy, luxury, SUV, or van — whatever fits your journey.</p>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="400">
            <div class="feature-card h-100">
                <h3>Easy Booking</h3>
                <p>Reserve your car online in just a few clicks. Fast, simple, and secure.</p>
            </div>
        </div>
        <div class="col-md-4" data-aos="fade-left" data-aos-delay="600">
            <div class="feature-card h-100">
                <h3>24/7 Support</h3>
                <p>Our support team is always ready to help you with any questions or concerns.</p>
            </div>
        </div>
    </div>
</div>

<!-- Booking Section -->
<div class="booking-section" data-aos="zoom-in-up" data-aos-duration="1000">
    <h2>Book Your Car Now</h2>
    <p>Start your journey today with the most trusted rental service in your city.</p>
    <a href="@Url.Action("Index", "Booking")" class="btn custom-btn">Book a Car</a>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ once: true });
    </script>
}
