@model CarRental.Models.Feedback

@{
    ViewData["Title"] = "Delete Feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger fw-bold">Delete Feedback</h2>

    <div class="alert alert-warning">
        <h5>Are you sure you want to delete this feedback?</h5>
    </div>

    <div class="card shadow p-4">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Message:</strong></p>
        <div class="border rounded p-3 bg-light">
            @Model.Message
        </div>
        <p class="mt-3"><strong>Submitted On:</strong> @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
