@model IEnumerable<CarRental.Models.Car>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Cars";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-dark">
        <i class="bi bi-car-front-fill me-2"></i> Manage Cars
    </h2>

    <div class="mb-3">
        <a asp-action="AddCar" class="btn btn-success">
            <i class="bi bi-plus-circle-fill me-1"></i> Add New Car
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Model</th>
                        <th>Brand</th>
                        <th>Seats</th>
                        <th>Fuel</th>
                        <th>Price/Day</th>
                        <th>Available</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var car in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(car.ImageUrl))
                                    {
                                        <img src="@car.ImageUrl" alt="Car Image" width="80" class="rounded shadow-sm" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>
                                <td>@car.CarName</td>
                                <td>@car.CarModel</td>
                                <td>@car.CarBrand</td>
                                <td>@car.Seats</td>
                                <td>@car.FuelType</td>
                                <td>Rs. @car.PricePerday</td>
                                <td>
                                    @if (car.IsAvailable)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">No</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@car.CarId" class="btn btn-info btn-sm me-1">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@car.CarId" class="btn btn-primary btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@car.CarId" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash3-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">No cars available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
